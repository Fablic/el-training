<%= form_with scope: :session, url:login_path, local: true, method: :post do |form| %>
  <div>
    <%= form.label(I18n.t('activerecord.attributes.user.email')) %>
    <%= form.text_field :email %>
  </div>
  <div>
    <%= form.label(I18n.t('activerecord.attributes.user.password')) %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.label(:remember_me) do %>
      <%= form.check_box :remember_me %>
      <span><%= I18n.t('view.session.label.remember') %></span>
    <% end %>
  </div>
  <%= form.submit I18n.t('view.session.label.login') %>
<% end %>
