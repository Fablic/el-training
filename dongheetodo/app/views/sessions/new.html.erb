<%= render 'layouts/flash_messages' %>
<h4><%= t("activerecord.users.login.title") %></h4>
<%= form_with url: login_path, local: true do |f| %>
  <div class="form-group">
    <%= f.label t('activerecord.attributes.user.email'), class: 'label' %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label t('activerecord.attributes.user.password_digest'), class: 'label' %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit t('button.login'), class: 'btn btn-primary' %>
  </div>
<% end %>
