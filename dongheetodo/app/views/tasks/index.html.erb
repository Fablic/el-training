<%= render "notice" %>
<h1><%= t "activerecord.tasks.index.title" %></h1>
<%= link_to t("button.create"), new_task_path %>
<table>
  <thead>
    <th><%= t "activerecord.attributes.task.id" %></th>
    <th><%= t "activerecord.attributes.task.name" %></th>
    <th><%= t "activerecord.attributes.task.status.name" %></th>
    <th><%= t "activerecord.attributes.task.priority.name" %></th>
    <th><%= t "activerecord.attributes.task.duedate" %></th>
    <th colspan="3"><%= t "index.table.head.config" %></th>
  </thead>
  <tbody>
    <% @tasks.each do |t| %>
    <tr>
      <td><%= t.id %></td>
      <td><%= t.name %></td>
      <td><%= t.status %></td>
      <td><%= t.priority %></td>
      <td><%= t.duedate && t.duedate.to_s(:long) %></td>
      <td><%= link_to t("button.show"), task_path(t) %></td>
      <td><%= link_to t("button.edit"), edit_task_path(t) %></td>
      <td><%= link_to t("button.delete"), task_path(t), method: :delete, data: { confirm: t("alert.task.delete") } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
