<%= render "notice" %>
<h1>タスク一覧</h1>
<%= link_to 'タスクを作成', new_task_path %>
<table>
  <thead>
    <th>ID</th>
    <th>タスク名</th>
    <th>ステータス</th>
    <th>優先順位</th>
    <th>完了期限</th>
    <th colspan="3">操作</th>
  </thead>
  <tbody>
    <% @tasks.each do |t| %>
    <tr>
      <td><%= t.id %></td>
      <td><%= t.name %></td>
      <td><%= t.status %></td>
      <td><%= t.priority %></td>
      <td><%= t.duedate && t.duedate.to_s(:long) %></td>
      <td><%= link_to '詳細', task_path(t) %></td>
      <td><%= link_to '修正', edit_task_path(t) %></td>
      <td><%= link_to '削除', task_path(t), method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
