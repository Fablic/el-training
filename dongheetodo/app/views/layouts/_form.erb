<%= form_with model: @task do |f| %>
  <%= render "layouts/errors", model: f.object %>
  <% # TODO: ログイン機能追加後、user_idを動的に当てるように修正 %>
  <%= f.hidden_field :user_id, :value => 1 %>
  <div>
    <%= f.label t("label.task.name") %><br>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label t("label.task.description") %><br>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label t("label.task.status") %><br>
    <%= f.select :status, Task.statuses.map{|k,v| [t("activerecord.enum.task.status.#{k}"), k]}, {prompt: t("alert.task.select")}%>
  </div>
  <div>
    <%= f.label t("label.task.priority") %><br>
    <%= f.select :priority, Task.priorities.map{|k, v| [t("activerecord.enum.task.priority.#{k}"),k]}, {prompt: t("alert.task.select")}%>
  </div>
  <div>
    <%= f.label t("label.task.duedate") %><br>
    <%= f.datetime_select :duedate %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>