<% resource.errors.full_messages.each do |message| %>
  <div class="error_field alert alert-danger" role="alert"><%= message %></div>
<% end %>
<h4><%= I18n.t('titles.users.new') %></h4>
<div class="form-horizontal my-2">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
    <div class="form-group row">
      <%= form.label :email, class: 'col-md-2 col-form-label' %>
      <div class="col-md-10">
        <%= form.email_field :email, autofocus: true, autocomplete: 'email' %>
      </div>
    </div>
    <div class="form-group row">
      <%= form.label :name, class: 'col-md-2 col-form-label' %>
      <div class="col-md-10">
        <%= form.text_field :name %>
      </div>
    </div>
    <div class="form-group row">
      <%= form.label :password, class: 'col-md-2 col-form-label' %>
      <div class="col-md-10">
        <%= form.password_field :password, autocomplete: 'new-password' %><br/>
        <% if @minimum_password_length %>
          <i><%= I18n.t('views.user_registration.password_length', minimum: @minimum_password_length) %></i>
        <% end %>
      </div>
    </div>
    <div class="form-group row">
      <%= form.label :password_confirmation, class: 'col-md-2 col-form-label' %>
      <div class="col-md-10">
        <%= form.password_field :password_confirmation, autocomplete: 'new-password' %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-md-10">
      <%= form.submit I18n.t('actions.create'), class: 'btn btn-outline-success' %>
      </div>
    </div>
<% end %>
</div>
<%= render 'devise/shared/links' %>
