<h4><%= I18n.t('titles.users.login') %></h4>
<div class="form-horizontal my-2">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
    <div class="form-group row">
      <%= form.label :email, class: 'col-md-2 col-form-label' %>
      <div class="col-md-10">
        <%= form.email_field :email, autofocus: true, autocomplete: 'email' %>
      </div>
    </div>
    <div class="form-group row">
      <%= form.label :password, class: 'col-md-2 col-form-label' %>
      <div class="col-md-10">
        <%= form.password_field :password, autocomplete: 'current-password' %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-md-10">
        <%= form.submit I18n.t('actions.login'), class: 'btn btn-outline-success' %>
      </div>
    </div>
  <% end %>
</div>
<%= render 'devise/shared/links' %>
