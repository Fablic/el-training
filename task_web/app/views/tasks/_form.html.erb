<%= form_with(model: task, local: true) do |form| %>

  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %></h2>このタスクは保存されませんでした。<ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label 'タスク名' %>
    <%= form.text_field :name, id: :task_name %>
  </div>

  <div>
    <%= form.label '説明' %>
    <%= form.text_area :description, id: :task_description %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
