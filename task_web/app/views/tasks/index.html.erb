<% flash.each do |key, value| %>
  <%= content_tag(:div, value, class: "#{key}") %>
<% end %>

<h1><%= t('titles.index') %></h1>
<br/>
<table border="1">
  <tr>
    <td><%= t('task.name') %></td>
    <td><%= t('task.description') %></td>
    <td>#</td>
    <td>#</td>
    <td>#</td>
  </tr>
  <% @tasks.each do |task| %>
    <tr>
      <td class="name"><%= task.name %></td>
      <td class="description"><%= task.description %></td>
      <td class="detail"><%= link_to t('links.show_task'), task %></td>
      <td class="edit"><%= link_to t('links.edit_task'), edit_task_path(task) %></td>
      <td class="delete"><%= link_to t('links.delete_task'), task, :method=>'delete', data: {confirm: t('messages.action_confirm', :action => t('actions.delete'), :target => task.name) } %></td>
    </tr>
  <% end %>
</table>
<%= link_to t('links.create_task'), new_task_path %>
