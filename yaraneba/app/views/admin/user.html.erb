<div class="w-75 detail m-auto">
  <p id="notice"><%= notice %></p>
  <p id="alert"><%= alert %></p>

  <table class="table">
    <thead>
      <tr>
        <th>id</th>
        <th>email</th>
        <th>role_name</th>
        <th>tasks_count</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each_with_index do |user, i| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.email %></td>
          <td><%= user.role_name %></td>
          <td><%= user.tasks_count %></td>
          <td><%= link_to I18n.t('admin.common.edit'), edit_user_path(user), id: "edit_#{i}" %></td>
          <td><%= link_to I18n.t('admin.common.destroy'), user, method: :delete, data: { confirm: I18n.t('admin.common.confirm') }, id: "delete_#{i}" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to I18n.t('admin.common.new_submit'), admin_users_new_path %>
</div>
