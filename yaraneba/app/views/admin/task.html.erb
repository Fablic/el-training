<div class="w-75 detail m-auto">
  <p id="notice"><%= notice %></p>

  <table class="table">
    <thead>
      <tr>
        <th>title</th>
        <th>status</th>
        <th>email</th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.title %></td>
          <td><%= task.status %></td>
          <td><%= task.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
