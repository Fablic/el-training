<div class="w-75 m-auto">
  <p id="notice"><%= notice %></p>

  <h1><%= I18n.t('tasks.show.title') %></h1>

  <p>
    <strong><%= I18n.t('tasks.common.title') %></strong>
    <%= @task.title %>
  </p>

  <p>
    <strong><%= I18n.t('tasks.common.detail') %></strong>
    <%= @task.detail %>
  </p>

  <p>
    <strong><%= I18n.t('tasks.common.status') %></strong>
    <%= I18n.t("tasks.status.#{@task.status}") %>
  </p>

  <p>
    <strong><%= I18n.t('tasks.common.priority') %></strong>
    <%= @task.priority %>
  </p>

  <p>
    <strong><%= I18n.t('tasks.common.end_date') %></strong>
    <%= @task.end_date %>
  </p>

  <%= link_to I18n.t('tasks.common.edit'), edit_task_path(@task) %> |
  <%= link_to I18n.t('tasks.common.back'), tasks_path %>
</div>
