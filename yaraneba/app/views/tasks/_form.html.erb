<%= form_with(model: task) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-label">
    <%= form.label I18n.t('tasks.common.title') %>
    <%= form.text_field :title, required: true, class: 'form-control' %>
  </div>

  <div class="field form-label">
    <%= form.label I18n.t('tasks.common.detail') %>
    <%= form.text_area :detail, class: 'form-control' %>
  </div>

  <div class="field form-label">
    <%= form.label I18n.t('tasks.common.status') %>
    <%= form.select :status, Task.statuses.keys.map { |k| [I18n.t("tasks.status.#{k}"), k]}, {}, {class: 'form-control'} %>
  </div>

  <div class="field form-label">
    <%= form.label I18n.t('tasks.common.label') %>
    <%= form.text_field :label, value: @task.labels.map(&:name).zip.join(" "), class: 'form-control', :placeholder => I18n.t('tasks.common.label_placeholder') %>
  </div>

  <div class="field form-label">
    <%= form.label I18n.t('tasks.common.end_date') %>
    <%= form.date_select :end_date, {}, {class: 'form-control', style: 'display: inline-block;width: auto;'} %>
  </div>

  <div class="actions">
    <%= form.submit nil, class: 'btn btn-primary' %>
  </div>
<% end %>
