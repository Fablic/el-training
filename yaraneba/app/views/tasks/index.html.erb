<p id="notice"><%= notice %></p>

<h1><%= I18n.t('tasks.index.title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= I18n.t('tasks.common.title') %></th>
      <th><%= I18n.t('tasks.common.detail') %></th>
      <th><%= I18n.t('tasks.common.status') %></th>
      <th><%= I18n.t('tasks.common.priority') %></th>
      <th><%= I18n.t('tasks.common.end_date') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.detail %></td>
        <td><%= task.status %></td>
        <td><%= task.priority %></td>
        <td><%= task.end_date %></td>
        <td><%= link_to I18n.t('tasks.common.show'), task %></td>
        <td><%= link_to I18n.t('tasks.common.edit'), edit_task_path(task) %></td>
        <td><%= link_to I18n.t('tasks.common.destroy'), task, method: :delete, data: { confirm: I18n.t('tasks.index.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to I18n.t('tasks.index.new_submit'), new_task_path %>
