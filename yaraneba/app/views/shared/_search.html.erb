<div class="search">
  <%= form_tag(tasks_path, :method => 'get') do %>
    <%= text_field_tag :title, "", class: 'form-control form-search' %>
    <%= select_tag :status, options_for_select(I18n.t('tasks.status').invert.merge('All' => ''), selected: ''), class: 'form-control form-search' %>
    <%= submit_tag I18n.t('tasks.common.search'), :name => nil, class: 'btn btn-primary' %>
  <% end %>
</div>
