<h1>User</h1>

<p id="notice"><%= notice %></p>

<%= form_for(@user, url: admin_user_path(@user), html: {method: 'put'}) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  <%= f.label :email, t('email') %>
  <%= f.text_area :email %>
  <br>
  <%= f.label :name, t('username') %>
  <%= f.text_field :name %>
  <br>
  <p><%= t('created_at') %>: <%= l @user.created_at %></p>
  <p><%= t('last_modified') %>: <%= l @user.updated_at %></p>
  <%= f.submit t('submit') %>
<% end %>

<% unless current_user? @user %>
  <%= form_for(@user, url: admin_user_path(@user), html: {method: 'delete'}) do |f| %>
    <%= f.submit t('delete'), data: { confirm: t('delete_confirm') } %>
  <% end %>
<% end %>

<%= link_to t('back'), admin_users_path %>
