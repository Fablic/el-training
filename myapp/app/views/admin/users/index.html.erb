<h1>Users</h1>

<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th><%= t('email') %></th>
      <th><%= t('name') %>
      <th><%= 'number of tasks' %>
      <th><%= t('created_at') %></th>
      <th><%= t('updated_at') %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= mail_to user.email %></td>
        <td><%= link_to user.name, admin_user_path(user) %></td>
        <td><%= link_to "#{task_count(user)} tasks", tasks_path('q[user_id_eq': user.id) %></td>
        <td><%= l user.created_at %></td>
        <td><%= l user.updated_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('back'), admin_path %>
