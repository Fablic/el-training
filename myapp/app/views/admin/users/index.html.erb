<h1 class='admn-user-headline'><%= t('.title') %></h1>
<%= link_to t('new_label'), new_label_path, class: 'btn btn-info float-right new-admin-user mt-2' %>
<%= link_to t('new_user'), new_admin_user_path, class: 'btn btn-primary float-right new-admin-user mt-2 mx-5' %> 
<table class="table">
  <thead>
    <tr>
      <th><%= User.human_attribute_name(:name) %></th>
      <th><%= User.human_attribute_name(:email) %></th>
      <th><%= User.human_attribute_name(:role) %></th>
      <th><%= t('.task_size') %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @admin_users.each do |u| %>
      <tr>
        <td><%= u.name %></td>
        <td><%= u.email %></td>
        <td><%= u.human_attribute_enum(:role) %></td>
        <td><%= u.tasks.size %></td>
        <td>
          <div class="btn-group">
            <%= link_to t('.detail'), admin_user_path(u), class: 'btn btn-secondary' %>
            <%= link_to t('.edit'), edit_admin_user_path(u), class: 'btn btn-primary' %>
            <%= link_to t('.delete'), admin_user_path(u), method: :delete, data: { confirm: t('.confirm') }, class: 'btn btn-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
  <div class="task-paginate"><%= paginate @admin_users %></div>
  <div>
    <%= link_to t('.task'), tasks_path, class: 'btn btn-primary' %>
    <%= link_to t('.label'), labels_path, class: 'btn btn-info' %>
  </div>
</div>
