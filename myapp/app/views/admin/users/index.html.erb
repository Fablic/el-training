<h1><%= t '.users' %></h1>

<p id="notice"><%= notice %></p>

<%= link_to t('.new_user'), new_admin_user_path %>

<table>
  <thead>
    <tr>
      <th><%= t('email') %></th>
      <th><%= t('username') %>
      <th><%= t('.number_of_tasks') %>
      <th><%= t('created_at') %></th>
      <th><%= t('last_modified') %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= mail_to user.email %></td>
        <td><%= link_to user.name, admin_user_path(user) %></td>
        <td><%= link_to t('.number_of_tasks_of_user', count: task_count(user)), tasks_path('q[user_id_eq': user.id.to_s) %></td>
        <td><%= l user.created_at %></td>
        <td><%= l user.updated_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('back'), admin_path %>
