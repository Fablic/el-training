<% if user_logged_in? %>
  <h1>Welcome,  <%= current_user.name %></h1>
  <% if admin_logged_in? %>
    <%= link_to 'Users', admin_users_list_path, class: "btn btn-secondary" %>
  <% end %>

<% else %>
  <div class="row p-2">
    <div class="dialog bg-white p-5 mb-3 text-center">
      <h1>Hello, Stranger. </h1>
      <p> New here? Then let's create an account and start using.</p>
      <p>Already have an account then Please sign in </p>
      <%= link_to 'Create an account', signup_path, class: "btn btn-secondary" %>
      <%= link_to 'Login', login_path, class: "btn btn-secondary" %>
    </div>
  </div>
<% end %>
