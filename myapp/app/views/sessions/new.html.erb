<div class="login">
  <div class="localize">
    <% if I18n.locale == :ja %>
      <%= link_to url_for(locale: :en) do %>
        English
      <% end %>
    <% else %>
      <%= link_to url_for(locale: :ja) do %>
        日本語
      <% end %>
    <% end %>
  </div>
  <div class="login-application-title">
    <h1>
      <i class="fas fa-route fa-lg"></i>
      <a href="/">
        TreasureMap
      </a>
    </h1>
  </div>
  <div class="login-form_area">
    <div class="login-form">
      <div class="login-title">
        <%= t('login.login_name') %>
      </div>
      <div class="notifications">
        <% flash.each do |name, msg| %>
          <%= content_tag :div, msg, class: "flash-notification" %>
        <% end %>
      </div>
      <div class="login-input">
        <%= form_for :session, url: login_path do |f| %>
          <div class="login-input-email">
            <%= f.text_field :mail, class:"form-control", placeholder: t('login.login_input_email')  %>
          </div>
          <div class="login-input-password">
            <%= f.password_field :password, class:"form-control", placeholder: t('login.login_input_password')  %>
          </div>
          <div class="login-input-submit">
            <%= f.submit t('login.login_submit'), class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
