<h1>Login</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with scope: :session, local: true do |form| %>
      <%= form.label :email %>
      <%= form.email_field :email, size: 32, class: 'form-control mb-3' %>
      <%= form.label :password %>
      <%= form.password_field :password, size: 32, class: 'form-control mb-3' %>
      <%= form.submit 'Login', class: 'btn btn-primary mb-3' %>
    <% end %>
  </div>
  <p>New user? <%= link_to "Sign up now!", signup_path %></p>
</div>
