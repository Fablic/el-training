<h1><%= t('.login') %></h1>
<%= form_for(:session, url: login_path) do |f| %>
<div>
  <div>
    <div><%= f.label t('.email'), class: 'col-form-label' %></div>
    <div><%= f.text_field t('.email'), class: 'form-control' %></div>
  </div>
  <div>
    <div><%= f.label t('.password'), class: 'col-form-label' %></div>
    <div><%= f.password_field t('.password'), class: 'form-control' %></div>
  </div>
  <div><%= f.submit t('.login'), class: 'btn btn-primary mt-2' %></div>
  <p><%= t('.registration_message') %><%= link_to t('.here'), new_user_path %></p>
</div>
<% end %>
