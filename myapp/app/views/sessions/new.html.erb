<div class="container">
  <% if flash[:message].present? %>
  <div class="row">
    <div class="col">
      <div class='alert alert-warning' role='alert'>
        <%= flash[:message] %>
      </div>
    </div>
  </div>
  <% end %>

  <div class="row">
    <div class="col">
      <h1><%= t :login %></h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
    <%= form_tag sessions_path do |form| %>
      <div class="form-group">
        <%= label_tag :email, t(:email) %>
        <%= text_field_tag :email, nil, class: 'form-control' %>
      </div>
    
      <div class="form-group">
        <%= label_tag :password, t(:password) %>
        <%= password_field_tag :password, nil, class: 'form-control' %>
      </div>
    
      <%= submit_tag t(:login), class: 'btn btn-primary' %>
    <% end %>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col">
      <%= link_to t(:signup), signup_url, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
