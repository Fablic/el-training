<h1>ユーザー登録</h1>
<%= form_for(@user) do |f| %>
<%= render 'layouts/error_messages', model: f.object %>
<div>
  <div>
    <div><%= f.label :name, class: 'col-form-label' %></div>
    <div><%= f.text_field :name, class: 'form-control' %></div>
  </div>
  <div>
    <div><%= f.label :email, class: 'col-form-label' %></div>
    <div><%= f.text_field :email, class: 'form-control' %></div>
  </div>
  <div>
    <div><%= f.label :password, class: 'col-form-label' %></div>
    <div><%= f.text_field :password, class: 'form-control' %></div>
  </div>
  <div>
    <div><%= f.label :password_confirmation, class: 'col-form-label' %></div>
    <div><%= f.text_field :password_confirmation, class: 'form-control' %></div>
  </div>
  <div><%= f.submit '登録', class: 'btn btn-primary mt-2' %></div>
  <p>ログインは<%= link_to t('.here'), login_path %></p>
</div>
<% end %>
