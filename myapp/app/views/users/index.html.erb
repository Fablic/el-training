<div class="container">
  <%= render 'tasks/logged_in' %>

  <h2><%= t '.page_title' %></h2>

  <%= link_to t('.create'), new_user_path, class: 'btn btn-outline-primary' %> 

  <% if flash[:notice] %>
    <p>
      <font color="#ff0000"><%= flash[:notice] %></font>
    </p>
  <% end %>


  <table class="table">
    <thead>
      <tr>
        <th><%= t '.name' %></th>
        <th><%= t '.email' %></th>
        <th><%= t '.number_of_tasks' %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= link_to "#{user.tasks.count}", user_tasks_path(user) %></td>
          <td><%= link_to t('.show'), user, class: 'btn btn-outline-primary' %></td>
          <td><%= link_to t('.edit'), edit_user_path(user), class: 'btn btn-outline-primary' %></td>
          <td><%= button_to t('.delete'), user, method: :delete, class: 'btn btn-outline-primary' %></td> 
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

