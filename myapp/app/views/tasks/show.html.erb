<% if flash[:message].present? %>
<h1><%= flash[:message] %></h1>
<% end %>
<p>
  <strong><%= t :name %>:</strong>
  <%= @task.name %>
</p>
<p>
  <strong><%= t :description %>:</strong>
  <%= @task.description %>
</p>

<%= link_to "#{t('link_edit')}", edit_task_path(@task) %> | 
<%= link_to "#{t('link_back')}", tasks_path %> |
<%= link_to "#{t('link_delete')}", task_path(@task),
    method: :delete,
    data: { confirm: "#{t('delete_confirm')}" } %>
