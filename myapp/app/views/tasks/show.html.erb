<p id="notice"><%= notice %></p>

<%= form_for(@task, url: task_path(@task), html: {method: 'put'}) do |f| %>
  <%= f.label :title, t('title') %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :description, t('description') %>
  <%= f.text_area :description %>
  <br>
  <%= f.select :status, Task.statuses.keys.map {|k| [k, k] } %>
  <br>
  <%= f.select :priority, Task.priorities.keys.map {|k| [k, k]} %>
  <br>
  <p>Created By: <%= @task.user.name %></p>
  <p>Created At: <%= @task.created_at %></p>
  <p>Last Modified: <%= @task.updated_at %></p>
  <%= f.submit t('submit') %>
<% end %>

<%= form_for(@task, url: task_path(@task), html: {method: 'delete'}) do |f| %>
  <%= f.submit t('delete'), data: { confirm: 'Are you sure to delete ?' } %>
<% end %>

<%= link_to t('back'), tasks_path %>
