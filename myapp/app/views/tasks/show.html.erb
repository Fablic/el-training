<% provide(:title, 'Task Registration') %>
<div class="panel panel-primary">
  <div class="panel-heading">
	  <%= @task.title %>
  </div>
  <div class="panel-body">
    <table class="table">
	  <thead>
	    <tr>
		  <th>Status</th>
	  	  <th>Priority</th>
	  	  <th>Due Date</th>
	  	  <th>Created Date</th>
		  <th>Updated Date</th>
		</tr>
	  </thead>
	  <tbody>
	    <tr>
		  <td><span class="label label-success"><%= @task.status %></span></td>
	  	  <td><%= @task.priority %></td>
	  	  <td><%= @task.due_date %></td>
	  	  <td><%= @task.created_at %></td>
		  <td><%= @task.updated_at %></td>
		</tr>
	  </tbody>
	</table>
	<table class="table">
	  <thead><tr><th>Description</th></tr></thead>
	  <tbody><tr><td><%= @task.description %></td><tr></tbody>
	</table>
	<%= link_to 'Update Task', edit_task_path(@task.id), class: 'btn btn-primary' %>
	<%= link_to 'Remove', task_path(@task.id), method: 'delete', class: 'btn btn-danger' %>
  </div>
</div>
<%= link_to '<< Task List', root_path %>
