<%= form_with url: tasks_path, method: :get, local: true, class: 'form-row py-5' do |f| %>
  <%= f.label :title_search, t('.title_search'), class: 'col-form-label' %>
  <%= f.text_field :title, value: search_tasks.title, placeholder: t('.search_placeholder'), class: 'form-control col-sm-6' %>
      <%= f.label :status_search, t('.status_search'), class: 'col-form-label' %>
      <%= f.select :status, options_for_select(task_statuses, search_tasks.title), {include_blank: true}, class: 'form-control col-sm-2' %>
        <%= f.label :label_ids_search, 'ラベル', class: 'col-form-label' %>
        <%= f.collection_check_boxes(:label_ids, @labels, :id, :name, checked: search_tasks.label_ids) %>
            <%= f.submit 'Search', class: 'btn btn-secondary ml-2' %>
              <%= link_to 'New Task', new_task_path, class: 'btn btn-primary float-right new-task' %>
<% end %>
