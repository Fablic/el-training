<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title, 'タイトル' %>
    <%= f.text_field :title, :class => "form-control" %>
    <%= f.label :description, '説明' %>
    <%= f.text_field :description, :class => "form-control" %>
    <%= f.submit '登録', class: "btn btn-primary" %>
  </div>
<% end %>