<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation" class="alert alert-danger mt-3">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <label>Tasks Name</label>
    <%= form.text_field :name, class: "form-control", placeholder: "Task Name" %>
  </div>

  <div class="mb-3">
    <label>Description</label>
    <%= form.text_area :desc, class: "form-control", placeholder: "Description" %>
  </div>

  <div class="mb-3">
    <label>Status</label>
    <%= form.select :status, Task.statuses, { selected: @task.status || "", disabled: "", prompt: 'Please select status' }, class: "form-control" %>

  </div>

  <div class="mb-3">
    <label>Labels</label> <br>
    <%= form.collection_check_boxes(:label, Task.labels, :first, :first, include_hidden: false) do |l| %>
      <%= l.label { l.check_box + l.text } %>
    <% end %>
  </div>


  <div class="mb-3">
    <label>Priority</label>
    <%= form.select :priority, Task.priorities, { selected: @task.priority || "", disabled: "", prompt: 'Please select priority' }, class: "form-control", placeholder: "Priority" %>
  </div>

  <div class="mb-3">
    <label>Due Date</label>
    <%= form.datetime_local_field :due_date, class: "form-control", placeholder: "Due Date" %>
  </div>

  <div class="mb-3">
    <label>Assignee</label>
    <%= form.select :assignee, User.pluck(:name, :id), { selected: @task.assignee || "", disabled: "", prompt: 'Please Select an Assignee' }, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-secondary' %>
    <%= link_to 'Back', tasks_path, class: "btn btn-dark" %>
  </div>
<% end %>
