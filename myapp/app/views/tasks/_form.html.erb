<%= form_for(task) do |f| %>                                                                                                                                        
<%= render 'layouts/error_messages', model: f.object %>
  <div>
    <div>
      <div><%= f.label :title, class: "col-form-label" %></div>
      <div><%= f.text_field :title, class: "form-control" %></div>
    </div>
    <div>
      <div><%= f.label :memo, class: "col-form-label" %></div>
      <div><%= f.text_area :memo, class: "form-control" %></div>
    </div>
    <div>
      <div><%= f.label :deadline, class: "col-form-label" %></div>
      <div><%= f.date_select :deadline, use_month_numbers: true, :include_blank => true, class: "form-control" %></div>
    </div>
    <div>
      <div><%= f.label :status, class: "col-form-label" %></div>
      <div><%= f.select :status, Task.statuses.map {|k, _| [Task.human_attribute_enum_val(:status, k), k] }.to_h, {}, {class: "form-control col-sm-2"} %></div>
    </div>
    <div><%= f.submit(class: 'btn btn-primary form-control mt-2') %></div>
  <div>
<% end %>
