<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-3">
    <%#= form.label :name %>
    <%= form.text_field :name, class: "form-control", placeholder: "Task Name" %>
  </div>

  <div class="field mb-3">
    <%#= form.label :desc %>
    <%= form.text_area :desc, class: "form-control", placeholder: "Description"%>
  </div>

  <div class="field mb-3">
    <%#= form.label :status %>
    <%= form.number_field :status, class: "form-control", placeholder: "Status"%>
  </div>

  <div class="field mb-3">
    <%#= form.label :label %>
    <%= form.text_field :label, class: "form-control", placeholder: "Label" %>
  </div>

  <div class="field mb-3">
    <%#= form.label :priority %>
    <%= form.number_field :priority, class: "form-control", placeholder: "Priority"%>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-secondary' %>
    <%= link_to 'Back', tasks_path, class: "btn btn-dark" %>
  </div>
<% end %>
