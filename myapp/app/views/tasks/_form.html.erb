<%= form_for(task) do |f| %>                                                                                                                                        
<%= render 'layouts/error_messages', model: f.object %>
  <div>
    <div>
      <div><%= f.label :title %></div>
      <div><%= f.text_field :title %></div>
    </div>
    <div>
      <div><%= f.label :memo %></div>
      <div><%= f.text_area :memo %></div>
    </div>
    <div>
      <div><%= f.label :deadline %></div>
      <div><%= f.date_select :deadline, use_month_numbers: true, :include_blank => true %></div>
    </div>
    <div>
      <div><%= f.label :status %></div>
      <div><%= f.select :status, Task.statuses.map {|k, _| [Task.human_attribute_enum_val(:status, k), k] }.to_h %></div>
    </div>
    <div><%= f.submit %></div>
  <div>
<% end %>
