<h1>Tasks</h1>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Status</th>
      <th>Label</th>
      <th>Priority</th>
      <th><%= link_to 'Created at', root_path(sort_key: 'created_at', sort_val: sort_val_helper(@sort[:created_at])) %></th>
      <th><%= link_to 'Due date', root_path(sort_key: 'due_date', sort_val: sort_val_helper(@sort[:due_date])) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td class="task-name"><%= task.name %></td>
        <td><%= task.desc %></td>
        <td><%= Task.statuses.key(task.status) %></td>
        <td><%= task.label %></td>
        <td><%= Task.priorities.key(task.priority) %></td>
        <td><%= task.created_at.strftime("%Y/%m/%d %H:%M") %></td>
        <td><%= task.due_date.strftime("%Y/%m/%d %H:%M") %></td>
        <td><%= link_to 'Show', task, class: 'btn btn-secondary' %></td>
        <td><%= link_to 'Edit', edit_task_path(task), class: 'btn btn-dark' %></td>
        <td><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path, class: "btn btn-secondary" %>

