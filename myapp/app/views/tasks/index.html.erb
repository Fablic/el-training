<h1>Task List</h1>
<div class="accordion" id="accordionExample">
    <% @tasks.each do |task| %>
    <div class="card">
        <div class="card-header" id="heading<%= task.id %>">
            <h2 class="mb-0">
                <button class="btn btn-link<% if task.id > 1 %> collapsed<% end %>" type="button" data-toggle="collapse" data-target="#collapse<%= task.id %>" aria-expanded="<% if task.id == 1 %>true<% else %>false<% end %>" aria-controls="collapse<%= task.id %>">
                    <%= task.title %>
                </button>
            </h2>
        </div>
    
        <div id="collapse<%= task.id %>" class="collapse<% if task.id == 1 %> show<% end %>" aria-labelledby="heading<%= task.id %>" data-parent="#accordionExample">
            <div class="card-body">
                <%= task.description %>
            </div>
        </div>
    </div>
    <% end %>
</div>
<div class="panel-group" id="accordion">
    <% @tasks.each do |task| %>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= task.id %>">
                    <%= task.title %>
                </a>
            </h4>
        </div>
        <div id="collapse<%= task.id %>" class="panel-collapse collapse">
            <div class="panel-body">
                <%= task.description %>
            </div>
      </div>
    </div>
    <% end %>
</div>