<div class="container">
  <%= render 'tasks/logged_in' %>

  <h2><%= I18n.t('tasks.index.page_title') %></h2>

  <%= link_to I18n.t('tasks.index.create'), new_task_path, class: 'btn btn-outline-primary' %>

  <% if flash[:notice] %>
    <p>
      <font color="#ff0000"><%= flash[:notice] %></font>
    </p>
  <% end %>

  <%# ransack %>
  <%= search_form_for @q do |f| %>
    <%= f.label :title_cont, "Title_cont" %>
    <%= f.search_field :title_cont %>

    <%= f.label :status_eq, "Status_eq" %>
    <%= f.select :status_eq, Task.statuses.map{|k, v| [Task.statuses_i18n[k], v]}, {include_blank: '選択してください'}  %>

    <%= f.submit "検索", class: 'btn btn-outline-primary' %>
  <% end %>

  <table class="table">
    <thead>
      <tr>
        <th><%= I18n.t('tasks.index.title') %></th>
        <th><%= I18n.t('tasks.index.description') %></th>
        <th><%= sort_by('due_date') %></th>
        <th><%= I18n.t('tasks.index.status') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.title %></td>
          <td><%= task.description %></td>
          <td><%= task.due_date %></td>
          <td><%= task.status_i18n %></td>
          <td><%= link_to I18n.t('tasks.index.show'), task, class: 'btn btn-outline-primary' %></td>
          <td><%= link_to I18n.t('tasks.index.edit'), edit_task_path(task), class: 'btn btn-outline-primary' %></td>
          <td><%= button_to I18n.t('tasks.index.delete'), task, method: :delete, class: 'btn btn-outline-primary' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @tasks %>
</div>

