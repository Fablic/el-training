<h1>Task List</h1>

<%= link_to 'Create New Task', new_task_path %>

<% if flash[:notice] %>
  <p>
    <font color="#ff0000"><%= flash[:notice] %></font>
  </p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Discription</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.discription %></td>
        <td><%= link_to "show", task %></td>
        <td><%= link_to "edit", edit_task_path(task) %></td>
        <td><%= link_to "delete", root_path(task), method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
