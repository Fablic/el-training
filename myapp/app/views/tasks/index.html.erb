<h1><%= t 'task.index.page_title' %></h1>

<%= link_to 'Create New Task', new_task_path %>

<% if flash[:notice] %>
  <p>
    <font color="#ff0000"><%= flash[:notice] %></font>
  </p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= link_to "show", task %></td>
        <td><%= link_to "edit", edit_task_path(task) %></td>
        <td><%= button_to "destroy", task_path(task), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
