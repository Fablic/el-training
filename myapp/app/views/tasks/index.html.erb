<h1><%= t('tasks.index.title') %></h1>
<table>
  <thead>
    <tr>
      <th><%= tasks_sort(Task.human_attribute_name(:title), 'title') %></th>
      <th><%= tasks_sort(Task.human_attribute_name(:memo), 'memo') %></th>
      <th><%= tasks_sort(Task.human_attribute_name(:deadline), 'deadline') %></th>
      <th><%= tasks_sort(Task.human_attribute_name(:created_at), 'created_at') %></th>
      <th><%= tasks_sort(Task.human_attribute_name(:status), 'status') %></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |t| %>
      <tr class='task'>
        <td><%= link_to t.title, t %></td>
        <td><%= t.memo %></td>
        <td><%= l t.deadline if t.deadline.present? %></td>
        <td><%= l t.created_at, format: :short %></td>
        <td><%= t.human_attribute_enum(:status) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Task', new_task_path %>
