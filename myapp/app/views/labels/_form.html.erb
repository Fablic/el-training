<%= form_for label do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
    <div>
      <div>
        <div><%= f.label :name, class: 'col-form-label' %></div>
        <div><%= f.text_field :name, class: 'form-control' %></div>
      </div>
      <div><%= f.submit(class: 'btn btn-primary form-control mt-2') %></div>
    </div>
<% end %>
