<div class="project-show-whole">
  <div class="project-show-header">
    <div class="project-show project-name">
      <input class="btn btn-success project show-project-name change-name-input" id=<%= @project.id %> value=<%= @project.name %>>
    </div>
    <div class="project-show project-dropdown">
      <%= render 'dropdown_show' %>
    </div>
  </div>
  <div class="project-show-body">
    <% @project.groups.each do |group| %>
      <div class="project-show group">
        <div class="project-show group-title">
          <h5>
          <%= group.name %>
          <h5>
        </div>
        <div>
        </div>
        <div class="project-show aad-task-container">
          <button type="button" class="btn default add-task-button" data-toggle="modal" data-target="#create-task">
           <i class="fas fa-plus fa-sm"></i> Add a task
          </button>
        </div>
      </div>
      <%= render partial: 'tasks/modal', locals: { group: group } %>
    <% end %>
  </div>
