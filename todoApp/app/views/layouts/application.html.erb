<!DOCTYPE html>
<html>
  <head>
    <title>TodoApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <header class="blog-header py-3">
        <div class="row flex-nowrap justify-content-between align-items-center">
          <div class="col-4 pt-1">
            <% if current_user %>
              <h5 class="text-muted">Logged in as <%= current_user.name %></h5>
            <% else %>
              <h5 class="text-muted">Logged in as Guest</h5>
            <% end %>
          </div>
          <div class="col-4 text-center">
            <h2 class="text-dark">My Todo App</h2>
          </div>
          <div class="col-4 d-flex justify-content-end align-items-center">
            <% if current_user %>
              <%= link_to "Log Out", logout_path, class: 'btn btn-sm btn-outline-secondary' %>
            <% else %>
              <%= link_to "Log In", login_path, class: 'btn btn-sm btn-outline-secondary' %>
            <% end %>
          </div>
        </div>
      </header>
    </div>

    <%= yield %>
  </body>
</html>
