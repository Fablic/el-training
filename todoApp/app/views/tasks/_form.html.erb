<%= form_with(model: task, local: true) do |form| %>
<% if task.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(task.errors.count, t('error_unit')) %> <%= t('error_message') %></h2>

  <ul>
    <% task.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<%= form.hidden_field :user_id, value: current_user.id %>

<div class="form-group">
  <%= form.label :title, class: 'label' %>
  <%= form.text_field :title, class: 'form-control' %>
</div>

<div class="form-group">
  <%= form.label :description, class: 'label' %>
  <%= form.text_area :description, class: 'form-control' %>
</div>

<div class="form-group">
  <%= form.label :status, class: 'label' %>
  <%= form.select :status, Task.statuses.keys, {}, { class: 'form-control' } %>
</div>

<div class="form-group datetime-form-group">
  <%= form.label :due_date, class: 'label' %>
  <br><%= form.datetime_select :due_date %>
</div>

<div class="form-group">
  <%= form.label t('labels'), class: 'label' %>
  <br><%= collection_check_boxes(:task, :label_ids, Label.all, :id, :name) do |b| %>
    <div class="form-check form-check-inline">
      <%= b.check_box(class: 'form-check-input') %>
      <%= b.label(class: 'form-check-label') %>
    </div>
  <% end %>
</div>

<div class="form-group">
  <%= form.submit class: 'btn btn-success' %>
</div>
<% end %>
