<div class="container">
  <header class="blog-header py-3">
    <div class="row flex-nowrap justify-content-between align-items-center">
      <div class="col-4 pt-1">
        <% if current_user %>
          <h5 class="text-muted"><%= t('login_as') %> <%= current_user.name %></h5>
        <% else %>
          <h5 class="text-muted"><%= t('login_as') %> <%= t('guest') %></h5>
        <% end %>
      </div>
      <div class="col-4 text-center">
        <h2 class="text-dark">My Todo App</h2>
      </div>
      <div class="col-4 d-flex justify-content-end align-items-center">
        <%= link_to t('to_users_page'), admin_users_path, class: 'btn btn-sm btn-outline-secondary' %>&nbsp|&nbsp
        <% if current_user %>
          <%= link_to t('login_button'), logout_path, class: 'btn btn-sm btn-outline-secondary' %>
        <% else %>
          <%= link_to t('logout_button'), login_path, class: 'btn btn-sm btn-outline-secondary' %>
        <% end %>
      </div>
    </div>
  </header>
</div>
