<div class="container">
  <%= render 'common/notice' %>

  <h1><%= t('.head_title') %></h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= User.human_attribute_name(:name) %></th>
        <th><%= User.human_attribute_name(:email) %></th>
        <th><%= t('user_num_of_task') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.tasks.count %></td>
        <td><%= link_to t('show'), admin_user_path(user) %></td>
        <td><%= link_to t('edit'), edit_admin_user_path(user) %></td>
        <td><%= link_to t('destroy'), admin_user_path(user), method: :delete, data: { confirm: t('flash_message.delete_confirm') } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <hr>
  <%= paginate @users %>

  <br>

  <%= link_to t('admin.users.new_user'), new_admin_user_path %>
</div>
