<header class='navbar navbar-inverse'>
  <div class='container'>
    <%= link_to 'jTodo', root_path, class: 'logo' %>
    <nav>
      <ul class='nav navbar-nav navbar-right'>
        <% if logged_in? %>
          <li class="nav-item"><%= link_to current_user.name, edit_user_path(current_user) %></li>
          <% if current_user.is_admin? %>
            <li class="nav-item"><%= link_to t('.admin'), admin_root_path %></li>
          <% end %>
          <li class='divider'></li>
          <li class="nav-item"><%= link_to t('.logout'), logout_path, method: :delete %></li>
        <% else %>
          <li class="nav-item"><%= link_to t('.login'), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
