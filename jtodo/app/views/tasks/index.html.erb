<p id="notice"><%= notice %></p>

<h1><%= t('tasks.page.index') %></h1>

<%= link_to t('tasks.action.new'), new_task_path %>
<table>
  <thead>
    <tr>
      <th><%= t('tasks.label.status') %></th>
      <th><%= t('tasks.label.title') %></th>
      <th><%= t('tasks.label.priority')%></th>
      <th><%= t('tasks.label.due_date')%></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.status %></td>
        <td><%= link_to task.title, task %></td>
        <td><%= task.priority %></td>
        <td><%= task.due_date %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

