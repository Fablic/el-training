<h1><%= t('.title') %></h1>
<br/>
<h2><%= @task.title %></h2>
<p>
  <%= @task.description.gsub(/\n/, '<br/>').html_safe %>
</p>

<p>
  <strong><%= Task.human_attribute_name('priority') %> :</strong>
  <%= @task.priority_i18n %>
</p>

<p>
  <strong><%= Task.human_attribute_name('status') %>:</strong>
  <%= @task.status_i18n %>
</p>

<p>
  <strong><%= Task.human_attribute_name('due_date') %>:</strong>
  <%= @task.due_date %>
</p>

<p>
  <strong><%= Task.human_attribute_name('label_names') %>:</strong>
  <%= @task.label_names %>
</p>

