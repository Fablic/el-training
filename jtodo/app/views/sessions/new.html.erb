<h1><%= t('sessions.page.new') %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |form| %>

      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control' %>

      <%= form.label :password %>
      <%= form.password_field :password, class: 'form-control' %>

      <%= form.submit t('users.action.login'), class: 'btn btn-primary' %>
    <% end %>
    
    <p><%= t('users.message.newuser') %><%= link_to t('users.message.signupnow'), signup_path %></p>
  </div>
</div>
