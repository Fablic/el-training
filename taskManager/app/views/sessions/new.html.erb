<h1>Login</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <%= form_with scope: :session, url: sessions_path do |form| %>
    <%= form.label :email %>
    <%= form.text_field :email, size: 32, class: 'form-control' %>
    <%= form.label :password %>
    <%= form.password_field :password, size: 32, class: 'form-control' %>
    <%= form.submit 'Login', class: 'btn btn-primary' %>
  <% end %>

  <p>New user? <%= link_to "Sign up now!", new_user_path %></p>
  </div>
</div>
