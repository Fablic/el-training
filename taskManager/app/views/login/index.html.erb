<div class="container">
  <div class="panel">
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "alert alert-#{key}") %>
    <% end %>
    <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <% @user.errors.full_messages.each do |msg| %>
          <ul><%= msg %></ul>
        <% end %>
      </div>
    <% end %>
    <div class="panel-body">
      <div class="form-horizontal">
        <%= form_for(@user, :url => login_index_path, :method => :post) do |f| %>
          <div class="form-group">
            <%= f.label :mail %>
            <%= f.text_field :mail, :class => "form-control input-sm" %>
          </div>
          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, :class => "form-control input-sm" %>
          </div>

          <div class="form-group">
            <%= submit_tag "ログイン", :class => "btn btn-default" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>