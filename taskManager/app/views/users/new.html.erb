<h1><%= t('.title')  %></h1>

<%= form_with(model: @user, local: true) do |form| %>
  <% if form.object.errors.any? %>
    <div class="alert alert-warning">
      <ul>
        <% form.object.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :email, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-5">
      <%= form.text_field :email %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :last_name, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-5">
      <%= form.text_area :last_name %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :first_name, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-5">
      <%= form.text_area :first_name %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :password, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-5">
      <%= form.password_field :password %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :password_confirmation, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-5">
      <%= form.password_field :password_confirmation %>
    </div>
  </div>

  <div>
    <%= form.submit t('action.create'), class:"btn btn-primary" %>
  </div>
<% end %>
