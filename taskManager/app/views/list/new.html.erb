<%
  action_content = action_contents
%>
<div class="container">
  <div class="panel">
    <div class="panel-body">
      <% flash.each do |alert_type, value| %>
        <%= content_tag(:div, value, class: "alert alert-#{alert_type}") %>
      <% end %>
      <% if @task.errors.any? %>
        <div class="alert alert-danger">
          <% @task.errors.full_messages.each do |msg| %>
            <ul><%= msg %></ul>
          <% end %>
        </div>
      <% end %>
      <div class="form-horizontal">
        <%= form_for(@task, :url => {:action => action_content[:action] }) do |f| %>
          <div class="form-group">
            <%= f.label :task_name %>
            <%= f.text_field :task_name, :class=>"form-control input-sm" %>
          </div>

          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, :class=>"form-control input-sm" %>
          </div>

          <div class="form-group">
            <%= f.label :deadline %>
            <%= f.date_field :deadline %>
          </div>

          <div class="form-group">
            <%= f.label :priority %>
            <%= f.select :priority, Task.priorities.keys.map { |k| [I18n.t("enum.task.priority.#{k}"), k] } %>
          </div>

          <div class="form-group">
            <%= f.label :status %>
            <%= f.select :status, Task.statuses.keys.map { |k| [I18n.t("enum.task.status.#{k}"), k] } %>
          </div>
          <div class="form-group">
            <div class="checkbox">
              <%= fields_for :task_label do |tl| %>
                <% @label.each do |l| %>
                  <label>
                    <%= tl.check_box :label_id, {name: 'task_label', multiple: true }, l.id, nil %>
                    <%= l.label_name %>
                  </label>
                <% end %>
              <% end %>
            </div>
          </div>
          <div class="form-group">
            <%= f.submit I18n.t(action_content[:action_name]), :class => "btn btn-default" %>
          </div>
        <% end %>
        <%= link_to I18n.t("actions.back"), :back %>
      </div>
    </div>
  </div>
</div>
