<%
  action_content = action_contents
%>
<div class="container">
  <div class="panel">
    <div class="panel-body">
      <% flash.each do |alert_type, value| %>
        <%= content_tag(:div, value, class: "alert alert-#{alert_type}") %>
      <% end %>
      <% if @task.errors.any? %>
        <div class="alert alert-danger">
          <% @task.errors.full_messages.each do |msg| %>
            <ul><%= msg %></ul>
          <% end %>
        </div>
      <% end %>
      <div class="form-horizontal">
        <%= form_for(@task, :url => {:action => action_content[:action] }) do |f| %>
          <div class="form-group">
            <%= f.label :task_name %>
            <%= f.text_field :task_name, :class=>"form-control input-sm" %>
          </div>

          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, :class=>"form-control input-sm" %>
          </div>

          <div class="form-group">
            <%= f.label :deadline %>
            <%= f.date_field :deadline %>
          </div>

          <div class="form-group">
            <%= f.label :priority %>
            <%= f.select :priority, Task.priorities.keys.map { |k| [I18n.t("enum.task.priority.#{k}"), k] } %>
          </div>

          <div class="form-group">
            <%= f.label :status %>
            <%= f.select :status, Task.statuses.keys.map { |k| [I18n.t("enum.task.status.#{k}"), k] } %>
          </div>
          <div class="form-group">
            <%= f.label :label %>
            <%= f.collection_select(:label_ids, @label.all, :id, :label_name, {} ,
            { multiple: true, class: "chosen-select" }) %>
          </div>
          <div class="form-group">
            <%= f.submit I18n.t(action_content[:action_name]), :class => "btn btn-default" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
