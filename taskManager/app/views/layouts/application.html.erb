<!DOCTYPE html>
<html>
  <head>
    <title>TaskManager</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand">TaskManager</a>
        </div>

        <div class="collapse navbar-collapse" id="navbarEexample">
          <end class="nav navbar-nav">
            <li class="<%= "active" if controller.action_name == "index" %>"><%= link_to I18n.t("actions.list"), list_index_path %></li>
            <li class="<%= "active" if controller.action_name == "new" %>"><%= link_to I18n.t("actions.new"), new_list_path %></li>
            <% if controller.action_name == "edit" %>
              <li class="active"><a><%= I18n.t("actions.edit") %></a></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
