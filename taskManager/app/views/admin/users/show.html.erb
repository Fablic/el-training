<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= format('%s %s', @admin_user.last_name, @admin_user.first_name) %>
</p>

<h2>User Info</h2>
<table class="table table-bordered">
  <tr>
    <th>Email</th>
  </tr>
  <tr>
    <td><%= @admin_user.email %></td>
  </tr>
</table>

<h2>Task List</h2>

<table class="table table-bordered">
  <tr>
    <th>#</th>
    <th>Title</th>
  </tr>
  <% @admin_user.tasks.each do |task| %>
  <tr>
    <td><%= task.id %></td>
    <td><%= task.summary %></td>
  </tr>
  <% end %>
</table>

<%= link_to t('action.update'), edit_admin_user_path(@admin_user), class: "btn btn-primary" %>
<%= link_to t('action.remove'), admin_user_path(@admin_user), class:"btn btn-primary", method: :delete, data: { confirm: t('flash.remove.confirm') } %>
<%= link_to t('action.back'), admin_users_path, class: "btn btn-primary" %>
