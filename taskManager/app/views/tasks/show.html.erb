<h1>Task Detail</h1>

<div>
  <table>
    <tr>
      <td>Summary</td>
      <td><%= @task.summary %></td>
    </tr>
    <tr>
      <td>Description</td>
      <td><%= @task.description %></td>
    </tr>
    <tr>
      <td>Priority</td>
      <td><%= @task.priority %></td>
    </tr>
    <tr>
      <td>Status</td>
      <td><%= @task.status %></td>
    </tr>
    <tr>
      <td>Due</td>
      <td><%= @task.due %></td>
    </tr>
  </table>
</div>

<div>
  <%= link_to 'Edit', edit_task_path(@task), class:"btn btn-primary" %>
  <%= link_to 'Delete', task_path(@task), class:"btn btn-primary", method: :delete, data: { confirm: 'Are you sure you want to delete this task?' } %> 
  <%= link_to 'Back', root_path, class:"btn btn-primary" %>
</div>
