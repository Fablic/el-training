<h1><%= t('.title')  %></h1>

<%= form_with(model: @task, local: true) do |form| %>

  <div class="field">
    <%= form.label :summary %>
    <%= form.text_field :summary %>
  </div>
  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>
  <div class="field">
    <%= form.label :priority %>
    <%= form.select :priority, Task.priorities.map { |k,v| [t(".priority.#{k}"),k] }, {prompt: 'pelase select priority'} %>
  </div>
  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, Task.statuses.map { |k,v| [t(".status.#{k}"),k] }, {prompt: 'pelase select status'} %>
  </div>
  <div class="field">
    <%= form.label :due %>
    <%= form.text_field :due %>
  </div>
  <div>
    <%= form.submit t('action.create'), class:"btn btn-primary" %>
    <%= link_to t('action.back'), root_path, class:"btn btn-primary" %>
  </div>
<% end %>
