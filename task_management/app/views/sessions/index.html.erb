<div class="container_sessions">
  <% content_for(:title, t('.title')) %>
  <h1><%= t('.title') %></h1>
  <hr>
  <div id="login">
    <%= form_with url: login_path, user: @user, method: :post, local: true do |f| %>
      <dl>
        <dt>ログインID</dt>
        <dd><%= f.text_field :login_id, placeholder: I18n.t('layouts.message.input'), id: 'login_id' %></dd>
        <dt>パスワード</dt>
        <dd><%= f.password_field :password, placeholder: I18n.t('layouts.message.input'), id: 'password' %></dd>
      </dl>
      <%= f.submit t('.login') %>
    <% end %>
  </div>
  <hr>
</div>
