<div>
  <div>
    <%= button_to I18n.t('button.new'), tasks_new_path, method: :get %>
  </div>
  <div>
    <% @tasks.each do |task| %>
      <ul>
        <li><a href="/tasks/show/<%=task.id%>"><%= I18n.t('view.task_name', :task => task.task_name) %></a></li>
      </ul>
    <% end %>
  </div>
</div>