<h1><%= t '.title' %></h1>

<%= link_to t('.new'), new_task_path %>

<% if flash[:notice] %>
  <p>
    <font color="#ff0000"><%= flash[:notice] %></font>
  </p>
<% end %>


<table>
  <tr>
    <th><%= t 'task_name' %></th><th><%= t 'contents' %></th>
  </tr>
  
  <% @tasks.each do |task| %>
    <tr>
      <td><%= link_to task.task_name, task_path(task) %></td>
      <td><%= task.contents %></td>
    </tr>
  <% end %>

</table>
