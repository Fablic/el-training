<h1>タスク一覧</h1>
<%= link_to '新規作成', new_task_path %>
<% if flash[:notice] %>
  <p>
    <%= flash[:notice] %>
  </p>
<% end %>


<table>
  <tr>
    <th>タスク名</th><th>内容</th>
  </tr>
  
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.task_name %></td>
      <td><%= task.contents %></td>
    </tr>
  <% end %>

</table>