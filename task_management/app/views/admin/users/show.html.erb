<div class='row col-12 mx-auto'>
  <div class='card mx-auto mt-3 mb-3' style='width: 100%;'>
    <div class='card-header alert-info text-secondary'>
      <h4>ユーザ情報</h4>
    </div>
    <div class='card-body '>
      <ul>
        <li>
          <%= I18n.t('view.user.user_name', user: @user.user_name) %>
        </li>
        <li>
          <%= I18n.t('view.user.mail_address', user: @user.mail_address) %>
        </li>
      </ul>
      <%= link_to(I18n.t('button.edit'), edit_admin_user_path, class: 'btn btn-secondary m-2') %>
      <%= link_to(I18n.t('button.delete'), admin_user_path(id: @user.id), method: 'delete', class: 'btn btn-danger m-2',
          data:{confirm: I18n.t('confirm-modal.confirm', user: @user.user_name)}) %>
    </div>
  </div>

  <div class='card mx-auto mt-3 mb-3' style='width: 100%;'>
    <div class='card-header alert-info text-secondary'>
      <h4>タスク</h4>
    </div>
    <div class='card-body'>
        <% @tasks.each do |task| %>
        <div class='card-body border border-secondary mb-3'>
          <h4><%= task.task_name %></h4>
        </div>
        <% end %>
    </div>
  </div>
</div>
