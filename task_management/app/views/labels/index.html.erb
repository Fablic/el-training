<div>
  <h2><%= I18n.t('labels.index.title') %></h2>
</div>
<%= link_to I18n.t('link.new'),  new_label_path %>
<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th><%= I18n.t('activerecord.attributes.label.name') %></th>
      <th><%= I18n.t('activerecord.attributes.common.created_at') %></th>
      <th><%= I18n.t('link.edit') %></th>
      <th><%= I18n.t('link.delete') %></th>
    </tr>
  </thead>
  <tbody>
    <% @labels.each do |label| %>
      <tr>
        <td><%= label.name %></td>
        <td><%= l label.created_at %></td>
        <td><%= link_to I18n.t('link.edit'), edit_label_path(label.id), class: 'btn btn-secondary btn-sm' %></td>
        <td><%= link_to I18n.t('link.delete'), label_path(label.id), method: :delete, data: { confirm: I18n.t('confirm.delete') }, class: 'btn btn-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @labels %>