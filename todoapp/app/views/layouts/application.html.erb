<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : 'todoapp' %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <header class="navbar navbar-expand-md navbar-light bg-light mb-3">
      <div class="navbar-brand"><%= content_for?(:title) ? yield(:title) : '' %></div>

      <nav>
        <ul class="navbar-nav">
          <li class="nav-item"><%= link_to t('tasks.index.title'), tasks_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to t('tasks.new.title'), new_task_path, class: 'nav-link' %></li>
        </ul>
      </nav>
    </header>

    <article class="container">
      <% if flash.notice.present? %>
        <div><%= flash.notice %></div>
      <% end %>

      <%= yield %>
    </article>
  </body>
</html>
