<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :end_at %>
  <%= f.date_field :end_at, min: 'Time.now.to_date', max: Time.now.to_date + (365 * 100) %>

  <%= f.submit %>
<% end %>
