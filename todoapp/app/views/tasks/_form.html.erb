<article class="card mx-auto w-75">
  <h5 class="card-header text-muted"><%= t('common.form_title') %></h5>
  <div class="card-body">
    <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>

    <%= form_with model: task, local: true, class: 'form-horizontal' do |f| %>
      <div class="form-group row">
        <%= f.label :title, class: 'col-form-label col-sm-2' %>
        <%= f.text_field :title, class: 'form-control col-7' %>
      </div>
      <div class="form-group row">
        <%= f.label :description, class: 'col-form-label col-sm-2' %>
        <%= f.text_area :description, class: 'form-control col-7' %>
      </div>
      <div class="form-group row">
        <%= f.label :status, class: 'col-form-label col-sm-2' %>
        <%= f.select :status, Task.statuses_i18n.invert, {}, { class: 'form-control col-7' } %>
      </div>
      <div class="form-group row">
        <%= f.label :end_at, class: 'col-form-label col-sm-2' %>
        <%= f.date_field :end_at, min: Time.now.to_date, max: Time.now.to_date + (365 * 100), class: 'form-control col-7' %>
      </div>

      <%= f.submit class: 'btn btn-primary' %>
    <% end %>
  </div>
</article>
