<%= link_to "一覧", :controller => "tasks", :action => "index" %>

<table>
  <tbody>
    <tr>
      <th><%= Task.human_attribute_name(:id) %></th>
      <td><%= @task.id %></td>
    </tr>
    <tr>
      <th><%= Task.human_attribute_name(:title) %></th>
      <td><%= @task.title %></td>
    </tr>
    <tr>
      <th><%= Task.human_attribute_name(:description) %></th>
      <td><%= @task.description %></td>
    </tr>
    <tr>
      <th><%= Task.human_attribute_name(:end_at) %></th>
      <td><%= @task.end_at.strftime('%Y年%m月%d日') unless @task.end_at.nil? %></td>
    </tr>
    <tr>
      <th><%= Task.human_attribute_name(:created_at) %></th>
      <td><%= @task.created_at.strftime('%Y年%m月%d日') %></td>
    </tr>
    <tr>
      <th><%= Task.human_attribute_name(:updated_at) %></th>
      <td><%= @task.updated_at.strftime('%Y年%m月%d日') %></td>
    </tr>
  </tbody>
</table>

<%= link_to "編集", :controller => "tasks", :action => "edit" %>
<%= link_to "削除", @task, :controller => "tasks", :action => "index",
            method: :delete, data: { confirm: "タスク「#{@task.title}」を削除します。よろしいですか？" } %>
