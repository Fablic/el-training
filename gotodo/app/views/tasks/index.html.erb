<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>
<h1><%= I18n.t('tasks.index.h1') %></h1>
<%= form_with url: tasks_path, method: :get do |form| %>
  <%= select_tag(:sort, options_for_select(@sort_cond, @sel_sort_cond)) %>
<% end %>
<table>
  <thead>
    <td><%= Task.human_attribute_name(:title) %></td>
    <td><%= Task.human_attribute_name(:detail) %></td>
    <td><%= I18n.t('attributes.created_at') %></td>
    <td><%= I18n.t('attributes.updated_at') %></td>
  </thead>
  <tbody>
    <%= render partial: 'task', collection: @tasks %>
  </tbody>
</table>
<br>
<%= link_to I18n.t('attributes.new_task'), new_task_path %>

<%= javascript_pack_tag 'index' %>
