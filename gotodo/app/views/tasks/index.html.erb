<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>
<h1><%= I18n.t('tasks.index.page_title') %></h1>
<%= form_with url: tasks_path, method: :get, local: true do |form| %>
  <%= select_tag(:sort, options_for_select(@sort_conds, @selected_sort_cond)) %>
<% end %>
<table>
  <thead>
    <td><%= sortable :title %></td>
    <td><%= sortable :detail %></td>
    <td><%= sortable :created_at %></td>
    <td><%= sortable :updated_at %></td>
  </thead>
  <tbody>
    <%= render partial: 'task', collection: @tasks %>
  </tbody>
</table>
<br>
<%= link_to I18n.t('attributes.new_task'), new_task_path %>
