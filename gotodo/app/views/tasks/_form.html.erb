<%= form_with(model: task) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= I18n.t('errors.validation', count: task.errors.count) %></h2>
      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form.label :title %>
  <br>
  <%= form.text_field :title %>
  <%= form.select :status, Task.statuses.map { |k, v| [I18n.t("tasks.status.#{k}"), k] } %>
  <br>
  <%= form.label :detail %>
  <br>
  <%= form.text_area :detail, size: "60x12" %>
  <br>
  <%= form.label :end_date %>
  <br>
  <%= form.date_field :end_date %>
  <br>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
