<h1>タスク一覧</h1>
<table>
  <tr>
    <th>タスク名</th>
    <th>タスク詳細</th>
    <th>操作</th>
  </tr>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.name %></td>
      <td><%= task.content %></td>
      <td>
        <ul>
          <li><%= link_to '編集', edit_task_path(task) %></li>
          <li><%= link_to '削除', task, method: :delete,
            data: { confirm: "本当に削除してよろしいですか？" } %></li>
        </ul>
      </td>
    </tr>
  <% end %>
</table>
