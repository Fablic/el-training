<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @task.each do |task| %>
  <tr>
    <th><%= task.title %></th>
    <th><%=task.description %></th>
