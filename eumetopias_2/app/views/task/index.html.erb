<h1>タスク一覧</h1>
<p>
<% flash.each do |name, msg| %>
<%= content_tag :div, msg, class: name  %>
<% end %>
</p>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @task.each do |task| %>
  <tr>
    <th><%= task.title %></th>
    <th><%=task.description %></th>
    <th><%= link_to 'show', task_path(task) %></th>
    <th><%= link_to 'edit', edit_task_path(task) %></th>
    <th><%= link_to 'destroy', task_path(task), method: :delete, data:{ confirm: t('dictionary.message.destroy.confirm')} %></th>
  <tr>
  <% end %>
</table>
<%= link_to 'new', new_task_path %>
