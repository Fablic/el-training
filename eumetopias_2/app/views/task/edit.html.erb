<h1>タスク編集</h1>
<%= form_with(model: @task, local: true) do |form| %>
<p>
  <%= form.label :title %><br>
  <%= form.text_field :title %>
</p>

<p>
  <%= form.label :description %><br>
  <%= form.text_field :description %>
</p>


<p>
  <%= form.submit %>
</p>

<% end %>

