<div class="container">
  <%= form_with(model: @label) do |f| %>
    <div class="mb-3">
      <%= f.label :name, class: 'form-label' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <p><%= f.submit (@label.new_record? ? I18n.t('common.action.create') : I18n.t('common.action.update')), class: 'btn btn-primary' %></p>
  <% end %>
</div>
