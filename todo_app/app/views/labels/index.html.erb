
<%= render 'layouts/flash', add_class: 'alert mt-3' %>
<div class="mb-2">
<%= link_to I18n.t('labels.common.create'), new_label_path, class: "btn btn-primary" %>
</div>
<% if @labels.present? %>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th><%= Label.human_attribute_name(:id) %></th>
        <th><%= Label.human_attribute_name(:name) %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @labels.each do |label| %>
        <tr>
          <td><%= label.id %></td>
          <td><%= label.name %></td>
          <td><%= link_to I18n.t('common.action.edit'), edit_label_path(label), class: 'btn btn-secondary' %></<td>
          <td>
            <% if label.tasks.blank? %>
              <%= link_to I18n.t('common.action.destroy'), label_path(label), method: :delete, class: 'btn btn-danger' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="d-flex justify-content-center">
    <%= paginate @labels %>
  </div>
<% else %>
  <p><%= I18n.t('labels.common.not_found') %></p>
<% end %>
