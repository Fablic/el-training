<%= link_to '新規作成', new_task_path %>

<% if @tasks.present? %>
  <table>
    <tr>
      <th>ID</th>
      <th>タスク名</th>
      <th>説明</th>
      <th></th>
    </tr>
    <% @tasks.find_each do |task| %>
    　　<tr>
          <td><%= link_to task.id, task_path(task) %></td>
          <td><%= task.title %></td>
          <td><%= task.description %></td>
          <td><%= link_to '削除', task_path(task), method: :delete %></td>
        </tr>
    <% end %>
  </table>
<% else %>
  タスクがまだ登録されていません
<% end %>
