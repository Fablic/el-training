<h1><%= I18n.t('page.task.title.list') %></h1>

<%= button_to I18n.t('helpers.submit.add'), new_task_path, method: :get, class: "btn btn-success"  %>

<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>">
    <%= value %>
  </div>
<% end %>

<table class="table">
  <thead>
  <tr>
    <th>ステータス</th>
    <th>タイトル</th>
    <th>編集</th>
    <th>削除</th>
  </tr>
  </thead>
  <tbody>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.status %></td>
      <td><%= link_to task.title, task_path(task) %></td>
      <td>
        <%= link_to edit_task_path(task), class: "edit-button" do %>
          <%= fa_icon "edit" %>
        <% end %>
      </td>
      <td>
        <%= link_to task_path(task),
                      method: :delete, data: { confirm: I18n.t('confirm.ok?') }, class: "trash-button" do %>
          <%= fa_icon "trash-o" %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
