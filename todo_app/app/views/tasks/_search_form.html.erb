<%= form_with url: search_path, method: :post, local: true do |f| %>
  <%= f.text_field :keyword, value: @keyword, placeholder: 'keyword' %>
  <%= f.collection_radio_buttons :status, Task.task_statuses, :first, :first, checked: default_select_status %>
  <%= f.submit I18n.t(:'button.search') %>
<% end %>
