<% if @tasks.present? %>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th><%= Task.human_attribute_name(:id) %></th>
        <th><%= Task.human_attribute_name(:title) %></th>
        <th><%= Task.human_attribute_name(:description) %></th>
        <th><%= Task.human_attribute_name(:status) %></th>
        <th><%= Task.human_attribute_name(:created_at) %></th>
        <th><%= Task.human_attribute_name(:due_date)%></th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.id %></td>
          <td><%= task.title %></td>
          <td><%= task.description.truncate(20) %></td>
          <td><%=  Task.human_attribute_name("status.#{task.status}") %>
          <td><%= I18n.l(task.created_at) %>
          <td><%= I18n.l(task.due_date, default: '') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="d-flex justify-content-center">
    <%= paginate @tasks %>
  </div>
<% else %>
  <p><%= I18n.t('tasks.common.not_found') %></p>
<% end %>
