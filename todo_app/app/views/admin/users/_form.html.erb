 <%= bootstrap_form_for(@user, url: user_form_path) do |t| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited
        this article from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= t.text_field :name, label: I18n.t('page.user.labels.user_name') %>
  <%= t.password_field :password, label: I18n.t('page.user.labels.password')  %>

  <%= t.submit submit_btn_name(path: new_admin_user_path), class: "btn btn-success" %>
  <%= link_to I18n.t('helpers.submit.cancel'), admin_users_path, {:class=>"btn btn-default"} %>
<% end %>