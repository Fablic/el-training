<div class="d-flex">
  <div class="w-25"><%= f.label I18n.t(:'user.username') %>:</div>
  <div class="w-50"><%= f.text_field :username, class: 'form-control' %></div>
</div>
<div class="d-flex">
  <div class="w-25"><%= f.label I18n.t(:'user.email') %>:</div>
  <div class="w-75"><%= f.text_field :email, class: 'form-control' %></div>
</div>
<div class="d-flex">
  <div class="w-25"><%= f.label I18n.t(:'user.icon') %>:</div>
  <div class="w-50"><%= f.text_field :icon, class: 'form-control' %></div>
</div>
<div class="d-flex">
  <div class="w-25"><%= f.label I18n.t(:'user.password') %>:</div>
  <div class="w-50"><%= f.text_field :password, type: 'password', class: 'form-control' %></div>
</div>
<div class="d-flex">
  <div class="w-25"><%= f.label I18n.t(:'user.password_confirmation') %>:</div>
  <div class="w-50"><%= f.text_field :password_confirmation, type: 'password', class: 'form-control' %></div>
</div>
<div class="d-flex">
  <div class="w-25"><%= f.label I18n.t(:'user.role') %>:</div>
  <div class="w-50"><%= f.select :role, User.roles.keys, {}, { class: 'form-select' } %></div>
</div>
