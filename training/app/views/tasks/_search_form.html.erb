<h3>検索フォーム</h3>
<%= form_with url: search_tasks_path, local: true, method: :get do |form| %>
  <div>
    <%= form.label '期限で並べ替え' %>
    <%= form.select :priority_order, [['昇順', 'asc'], ['降順', 'desc']], selected: params[:priority_order] %>
  </div>
  <div>
    <%= form.submit '検索する' %>
  </div>
<% end %>
