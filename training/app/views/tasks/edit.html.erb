<div>
  <h1>タスク編集</h1>
</div>
<%= form_for(@task) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br/>

  <%= f.label :description %>
  <%= f.text_area :description %>
  <br/>

  <%= f.submit '更新', data: { disable_with: '更新中...'} %>
<% end %>
<div>
  <%= link_to('一覧', tasks_path) %> / <%= link_to('詳細', task_path(@task)) %>
</div>