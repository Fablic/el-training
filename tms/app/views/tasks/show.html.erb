<h1><%= t('page.task.title.detail') %></h1>

<div class="row">
  <div class="col-md-6">
    <table class="table table-bordered table-striped table-hover table-condensed">
      <tr>
        <th><%= t('page.task.thead.title') %></th>
        <td><%= @task.title %></td>
      </tr>
      <tr>
        <th><%= t('page.task.thead.description') %></th>
        <td><%= @task.description %></td>
      </tr>
      <tr>
        <th><%= t('page.task.thead.due_date') %></th>
        <td><%= @task.due_date %></td>
      </tr>
      <tr>
        <th><%= t('page.task.thead.priority') %></th>
        <td><%= priority_name(@task.priority) %></td>
      </tr>
      <tr>
        <th><%= t('page.task.thead.status') %></th>
        <td><%= status_name(@task.status) %></td>
      </tr>
      <tr>
        <th><%= t('page.task.thead.user') %></th>
        <td><%= @task.user.name %></td>
      </tr>
      <tr>
        <th><%= t('page.task.thead.created_at') %></th>
        <td><%= @task.created_at %></td>
      </tr>
    </table>
  </div>
</div>
<%= link_to "<span class='glyphicon glyphicon-pencil'></span> #{t('page.task.link.edit')}".html_safe, edit_task_path(@task), class: 'btn btn-warning btn-sm' %>
<%= link_to "<span class='glyphicon glyphicon-arrow-left'></span> #{t('page.task.link.back')}".html_safe, tasks_path, class: 'btn btn-default btn-sm' %>
