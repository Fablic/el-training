<h1><%= t('page.admin.user.title.detail') %></h1>

<div class="row">
  <div class="col-md-6">
    <table class="table table-bordered table-striped table-hover table-condensed">
      <tr>
        <th><%= t('page.admin.user.thead.name') %></th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th><%= t('page.admin.user.thead.role') %></th>
        <td><%= role_name(@user.admin) %></td>
      </tr>
      <tr>
        <th><%= t('page.admin.user.thead.num_of_tasks') %></th>
        <td><%= @user.tasks.count %></td>
      </tr>
      <tr>
        <th><%= t('page.admin.user.thead.created_at') %></th>
        <td><%= @user.created_at %></td>
      </tr>
      <tr>
        <th><%= t('page.admin.user.thead.updated_at') %></th>
        <td><%= @user.updated_at %></td>
      </tr>
    </table>
  </div>
</div>
<%= link_to "<span class='glyphicon glyphicon-pencil'></span> #{t('page.admin.user.link.edit')}".html_safe, edit_admin_user_path(@user), class: 'btn btn-warning btn-sm' %>

<hr>

<h1><%= t('page.task.title.list') %></h1>

<table class="table table-bordered table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th><%= t('page.task.thead.title') %></th>
      <th><%= t('page.task.thead.description') %></th>
      <th><%= t('page.task.thead.due_date') %></th>
      <th><%= t('page.task.thead.priority') %></th>
      <th><%= t('page.task.thead.status') %></th>
      <th><%= t('page.task.thead.user') %></th>
      <th><%= t('page.task.thead.created_at') %></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><b><%= task.title %></b></td>
        <td><%= task.description %></td>
        <td><%= task.due_date %></td>
        <td><%= priority_name(task.priority) %></td>
        <td><%= status_name(task.status) %></td>
        <td><%= task.user.name %></td>
        <td><%= task.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "<span class='glyphicon glyphicon-arrow-left'></span> #{t('page.admin.user.link.back')}".html_safe, admin_users_path, class: 'btn btn-default btn-sm' %>
