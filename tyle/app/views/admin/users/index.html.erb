<%= render 'header' %>

<!-- users -->
<div class="card col-md-9">
  <div class="card-body">
    <div class="card-title text-center">
      <%= t('operation.user-list') %>
    </div>
    <table class="table table-sm">
      <thead>
        <tr>
          <th><%= t('activerecord.attributes.user.name') %></th>
          <th><%= t('activerecord.attributes.user.login_id') %></th>
          <th><%= t('activerecord.attributes.user.role') %></th>
          <th><%= t('operation.number_of_tasks') %></th>
          <th><%= t('activerecord.attributes.user.created_at') %></th>
          <th><%= t('button.detail') %></th>
        </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td class="user-name"><%= user.name %></td>
            <td class="user-login_id"><%= user.login_id %></td>
            <td class="user-role"><%= t("enums.user.role.#{user.role}") %></td>
            <td class="task-size"><%= user.tasks.size.to_s(:delimited) %></td>
            <td class="user-created_at"><%= I18n.l(user.created_at) %></td>
            <td><%= link_to t('button.detail'), admin_user_path(user.id) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
