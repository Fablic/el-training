<div class="card col-md-6">
  <div class="card-body">
    <%= form_with model: @session, url: login_path do |f| %>
      <div class="form-group">
        <%= f.label :login_id, value: t('activerecord.attributes.session.login_id') %>
        <%= f.text_field :login_id, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password, value: t('activerecord.attributes.session.password') %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.submit t('button.login'), class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
