<%= render 'header' %>
<%= render 'error_messages' %>

<div class="card col-md-9">
  <div class="card-body">
    <div class="card-title">
      <%= t('operation.session-new')%>
    </div>
    <%= form_with model: @session, url: login_path, local: true do |f| %>
      <div class="form-group">
        <%= f.label :login_id, t('activerecord.attributes.session.login_id') %>
        <%= f.text_field :login_id, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password, t('activerecord.attributes.session.password') %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.submit t('button.login'), class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
