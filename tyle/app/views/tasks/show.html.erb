<%= render 'flash' %>

<div>
  <h1>TYLE</h1>
  <%= link_to t('button.index'), tasks_path %>
  <%= link_to t('button.add'), new_task_path %>
</div>

<hr>

<div>
  <table>
    <tr>
      <td><%= t('activerecord.attributes.task.name') %></td>
      <td>:</td>
      <td><%= @task.name %></td>
    </tr>
    <tr>
      <td><%= t('activerecord.attributes.task.description') %></td>
      <td>:</td>
      <td><%= @task.description %></td>
    </tr>
    <tr>
      <td><%= t('activerecord.attributes.task.priority') %></td>
      <td>:</td>
      <td><%= @task.priority %></td>
    </tr>
    <tr>
      <td><%= t('activerecord.attributes.task.status') %></td>
      <td>:</td>
      <td><%= @task.status %></td>
    </tr>
    <tr>
      <td><%= t('activerecord.attributes.task.due_at') %></td>
      <td>:</td>
      <td><%= I18n.l(@task.due_at) %></td>
    </tr>
  </table>
</div>

<div>
  <%= link_to t('button.edit'), edit_task_path(@task) %>
  <%= link_to t('button.delete'), task_path(@task), method: :delete, data: { confirm: t('message.destroying') } %> 
</div>
