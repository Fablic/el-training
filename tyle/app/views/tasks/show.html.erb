<div>
  <% if flash[:notice] %>
    <div>
      <%= flash[:notice] %>
    </div>
  <% end %>
</div>

<div>
  <h1>TYLE</h1>
  <%= link_to t('button.index'), tasks_path, method: :get %>
  <%= link_to t('button.add'), new_task_path, method: :get %>
</div>

<hr>

<div>
  <table>
    <tr>
      <td><%= t('activerecord.attributes.task.name') %></td>
      <td>:</td>
      <td><%= @task.name %></td>
    </tr>
    <tr>
      <td><%= t('activerecord.attributes.task.description') %></td>
      <td>:</td>
      <td><%= @task.description %></td>
    </tr>
    <tr>
      <td><%= t('activerecord.attributes.task.priority') %></td>
      <td>:</td>
      <td><%= @task.priority %></td>
    </tr>
    <tr>
      <td><%= t('activerecord.attributes.task.status') %></td>
      <td>:</td>
      <td><%= @task.status %></td>
    </tr>
    <tr>
      <td><%= t('activerecord.attributes.task.due') %></td>
      <td>:</td>
      <td><%= @task.due %></td>
    </tr>
  </table>
</div>

<div>
  <%= link_to t('button.edit'), task_path(@task.id) + '/edit', method: :get %>
  <%= link_to t('button.delete'), task_path(@task.id), method: :delete %>
</div>
