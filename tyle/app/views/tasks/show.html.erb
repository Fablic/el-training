<%= render 'flash' %>

<div>
  <h1>TYLE</h1>
  <%= link_to "HOME", tasks_path %>
  <%= link_to "NEW", new_task_path %>
</div>

<hr>

<div>
  <table>
    <tr>
      <td>name</td>
      <td>:</td>
      <td><%= @task.name %></td>
    </tr>
    <tr>
      <td>description</td>
      <td>:</td>
      <td><%= @task.description %></td>
    </tr>
    <tr>
      <td>priority</td>
      <td>:</td>
      <td><%= @task.priority %></td>
    </tr>
    <tr>
      <td>status</td>
      <td>:</td>
      <td><%= @task.status %></td>
    </tr>
    <tr>
      <td>due</td>
      <td>:</td>
      <td><%= @task.due %></td>
    </tr>
  </table>
</div>

<div>
  <%= link_to "EDIT", edit_task_path(@task) %>
  <%= link_to "DELETE", task_path(@task), method: :delete, data: { confirm: 'Are you sure you want to delete this task?' } %> 
</div>
