<%= render 'header' %>

<div class="card col-md-9">
  <div class="card-body">
    <table class="table">
      <tbody>
        <tr>
          <td><%= t('activerecord.attributes.task.name') %></td>
          <td><%= @task.name %></td>
        </tr>
        <tr>
          <td><%= t('activerecord.attributes.task.description') %></td>
          <td><%= @task.description %></td>
        </tr>
        <tr>
          <td><%= t('activerecord.attributes.task.priority') %></td>
          <td><%= @task.priority %></td>
        </tr>
        <tr>
          <td><%= t('activerecord.attributes.task.status') %></td>
          <td><%= @task.status %></td>
        </tr>
        <tr>
          <td><%= t('activerecord.attributes.task.due') %></td>
          <td><%= I18n.l(@task.due) %></td>
        </tr>
        <tr>
          <td><%= t('activerecord.attributes.task.label') %></td>
          <td>
            <% @task.task_labels.each do |tl| %>
              <span><%= tl.label.name %></span>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
    <%= link_to t('button.edit'), edit_task_path(@task), class: 'btn btn-primary' %>
    <%= link_to t('button.delete'), task_path(@task), method: :delete, data: { confirm: t('message.task.destroying') }, class: 'btn btn-danger' %> 
  </div>
</div>
