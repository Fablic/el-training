<div>
  <% if flash[:notice] %>
    <div>
      <%= flash[:notice] %>
    </div>
  <% end %>
</div>

<div>
  <h1>TYLE</h1>
  <%= link_to t('button.index'), tasks_path, method: :get %>
  <%= link_to t('button.add'), new_task_path, method: :get %>
</div>

<hr>

<div>
  <table>
    <tr>
      <th><%= t('activerecord.attributes.task.name') %></th>
      <th><%= t('activerecord.attributes.task.priority') %></th>
      <th><%= t('activerecord.attributes.task.status') %></th>
      <th><%= t('activerecord.attributes.task.due') %></th>
      <th><%= t('button.detail') %></th>
    </tr>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= task.name %></td>
      <td><%= task.priority %></td>
      <td><%= task.status %></td>
      <td><%= task.due %></td>
      <td><%= link_to t('activerecord.attributes.task.detail'), task_path(task.id), method: :get %></td>
    </tr>
    <% end %>
  </table>
</div>
