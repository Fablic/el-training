<%= render 'error_messages', model: task %>

<div class="card col-md-6">
  <div class="card-body">
    <%= form_with model: task do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, rows: 10, class: 'form-control' %>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.label :priority %>
          <%= f.select :priority, Task.priorities.keys.to_a, {}, class: 'form-control' %>
        </div>
        <div class="form-group col-md-6">
          <%= f.label :status %>
          <%= f.select :status, Task.statuses.keys.to_a, {}, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :due %>
        <%= f.text_field :due, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :label %>
        <%= f.collection_select(:label_ids, Label.all, :id, :name, { include_hidden: false }, { multiple: true, class: 'form-control' }) %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
