<div>
  <%= render 'error_messages', model: task %>

  <%= form_for(task) do |form| %>
    <p>
      <%= form.label :name %><br>
      <%= form.text_field :name %>
    </p>
   
    <p>
      <%= form.label :description %><br>
      <%= form.text_area :description %>
    </p>

    <p>
      <%= form.label :priority %><br>
      <%= form.select :priority, Task.priorities.keys.to_a, {} %>
    </p>
   
    <p>
      <%= form.label :status %><br>
      <%= form.select :status, Task.statuses.keys.to_a, {} %>
    </p>
   
    <p>
      <%= form.label :due %><br>
      <%= form.datetime_field :due, value: Date.current.strftime("%Y-%m-%dT%T") %>
    </p>
   
    <p>
      <%= form.submit %>
    </p>
  <% end %>
</div>
