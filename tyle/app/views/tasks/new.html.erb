<div>
  <h1>TYLE</h1>
  <%= link_to "HOME", tasks_path, method: :get %>
</div>

<hr>

<div>
  <%= form_for(@task) do |form| %>
    <p>
      <%= form.label :name %><br>
      <%= form.text_field :name %>
    </p>
   
    <p>
      <%= form.label :description %><br>
      <%= form.text_area :description %>
    </p>
   
    <p>
      <%= form.label :user_id %><br>
      <%= form.text_field :user_id %>
    </p>
   
    <p>
      <%= form.label :priority %><br>
      <%= form.text_field :priority %>
    </p>
   
    <p>
      <%= form.label :status %><br>
      <%= form.text_field :status %>
    </p>
   
    <p>
      <%= form.label :due %><br>
      <%= form.text_field :due %>
    </p>
   
    <p>
      <%= form.submit %>
    </p>
  <% end %>
</div>
