<p id="notice"><%= notice %></p>

<h1><%= Task.model_name.human -%></h1>

<%= search_form_for(@q) do |f| %>
  <%= f.label :title %>
  <%= f.search_field :title_cont %>

  <%= f.label :status %>
  <%= f.select :status_eq, Task.statuses.map { |k, v| [t("activerecord.enums.task.status.#{k}"), v] } -%>

  <%= f.submit %>
<% end %>

<table>
  <thead>
    <tr>
      <th><%= Task.human_attribute_name(:title) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td class="task-title"><%= task.title %></td>
        <td><%= link_to t('show'), task %></td>
        <td><%= link_to t('edit'), edit_task_path(task) %></td>
        <td><%= link_to t('destroy'), task, { 
            method: :delete, 
            data: { confirm: t('.sure') }, 
            class: "task#{task.id}-remove-link" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new', model: Task.model_name.human), new_task_path %>
