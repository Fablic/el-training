<p id="notice"><%= notice %></p>

<h1><%= Task.model_name.human %></h1>

<%= search_form_for(@q) do |f| %>
  <%= f.label :title %>
  <%= f.search_field :title_cont, class: "form-control" %>

  <%= f.label :status %>
  <%= f.select :status_eq, Task.statuses.map { |k, v| [Task.status_name(k), v] }, \
    { include_blank: true }, class: "custom-select d-block w-100" %>

  <%= f.submit t('helpers.submit.search'), class: "btn btn-primary btn-lg" %>
<% end %>

<hr />

<%= paginate @tasks %>

<table class="table table-bordered">
  <thead>
    <tr>
      <th><%= Task.human_attribute_name(:title) %></th>
      <th><%= Task.human_attribute_name(:status) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td class="task-title"><%= task.title %></td>
        <td><%= task.status_name %></td>
        <td><%= link_to t('show'), task %></td>
        <td><%= link_to t('edit'), edit_task_path(task) %></td>
        <td><%= link_to t('destroy'), task, { 
            method: :delete, 
            data: { confirm: t('.sure') }, 
            class: "task#{task.id}-remove-link" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new', model: Task.model_name.human), new_task_path %>
