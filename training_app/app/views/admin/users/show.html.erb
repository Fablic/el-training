<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @admin_user.name %>
</p>

<h2>Task List</h2>

<table class="table table-bordered">
  <tr>
    <th>#</th>
    <th>Title</th>
  </tr>
  <% @admin_user.tasks.each do |task| %>
  <tr>
    <td><%= task.id %></td>
    <td><%= task.title %></td>
  </tr>
  <% end %>
</table>

<%= link_to 'Edit', edit_admin_user_path(@admin_user) %> |
<%= link_to 'Back', admin_users_path %>
