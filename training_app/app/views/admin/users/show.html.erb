<p id="notice"><%= notice %></p>

<p>
  <strong><%= Admin::User.human_attribute_name(:name) %>:</strong>
  <%= @admin_user.name %>
</p>

<h2><%= t(".task_list") %></h2>

<table class="table table-bordered">
  <tr>
    <th>#</th>
    <th><%= Task.human_attribute_name(:title) %></th>
  </tr>
  <% @admin_user.tasks.each do |task| %>
  <tr>
    <td><%= task.id %></td>
    <td><%= task.title %></td>
  </tr>
  <% end %>
</table>

<%= link_to t('edit'), edit_admin_user_path(@admin_user) %> |
<%= link_to t('back'), admin_users_path %>
