<%= form_with(model: task, local: true) do |form| %>

  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2>次を確認してください</h2>
      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= form.label :title, class:'h4' %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :content, class:'h4' %>
    <%= form.text_field :content %>
  </div>

  <div class="field">
    <%= form.label :status, class:'h4' %>
    <%= form.select :status, Task.statuses.map{|k, _|  [Task.human_attribute_enum_value(:status, k), k]}.to_h  %>
  </div>

  <div class="field">
    <%= form.label :end_time, class:'h4' %>
    <%= form.datetime_select :end_time %>
  </div>

  <div class="actions">
    <%= form.submit :class => 'btn btn-primary' %>
    <%= link_to t('.back'), tasks_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
