<!DOCTYPE html>
<html>
  <head>
    <title>TodoManager</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
		<header>
			<h1><%= link_to("Todo Manager", "/") %></h1>
		</header>
		<% if flash[:notice] %>
			<%= flash[:notice] %>
		<% end %>
    <%= yield %>
  </body>
</html>
