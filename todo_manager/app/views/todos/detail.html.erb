<h3><%= @todo.title %></h3>
<p><%= @todo.content %></p>
<p><%= "#{t('dictionary.priority')} #{t("priority.#{@todo.priority_id}")}" %></p>
<p><%= t("status.#{@todo.status_id}") %></p>
<% if !@todo.labels.count.nonzero?.nil? %>
  <p><%= t('dictionary.label') %></p>
  <% @todo.labels.each do |label| %>
    <%= label.name %>
  <% end %>
<% end %>
<p><%= "#{t('dictionary.deadline')} #{l(@todo.deadline, format: :long)}" if !@todo.deadline.nil? %></p>
<%= link_to(t('dictionary.edit'), "/todos/#{@todo.id}/edit") %>
<%= link_to(t('dictionary.destroy'), "/todos/#{@todo.id}/destroy", { method: 'post' }) %>
