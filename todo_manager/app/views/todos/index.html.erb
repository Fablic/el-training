<h2><%= t('.title') %></h2>
<%= link_to(t('dictionary.create'),'/todos/new') %>
<table border="1">
  <tr>
    <th><%= t('dictionary.title') %></th>
    <th><%= t('dictionary.content') %></th>
  </tr>
  <% @todos.each do |todo| %>
    <tr>
      <th><%= link_to(todo.title, "/todos/#{todo.id}/detail") %></th>
      <th><%= todo.content %></th>
    </tr>
  <% end %>
</table>
