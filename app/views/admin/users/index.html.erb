<p id="notice"><%= notice %></p>

<h1><%= t('.title') %></h1>

<%= link_to t('buttons.new'), new_admin_user_path, class: "btn btn-primary float-right" %>

<div class='table-responsive'>
  <table class='table table-striped table-bordered table-hover'>
    <thead>
      <tr>
        <th><%= User.human_attribute_name(:name) %></th>
        <th><%= User.human_attribute_name(:email) %></th>
        <th><%= User.human_attribute_name(:role) %></th>
        <th>タスク数</th>
        <th><%= User.human_attribute_name(:created_at) %></th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= t(".roles.#{user.role}") %></td>
          <td><%= user.tasks.count %></td>
          <td><%= l(user.created_at, format: :long) %></td>
          <td><%= link_to t('buttons.show'), admin_user_path(user), class: "btn btn-info" %></td>
          <td><%= link_to t('buttons.edit'), edit_admin_user_path(user), class: "btn btn-primary" %></td>
          <td><%= link_to t('buttons.destroy'), admin_user_path(user), class: "btn btn-danger", method: :delete, data: { confirm: t('messages.confirm') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
