<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<%= paginate @tasks %>

ページ: <%= @tasks.current_page %>/<%= @tasks.total_pages %>
総件数: <%= @tasks.total_count %>

<div class="table-responsive">
  <table border="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= Task.human_attribute_name(:name) %></th>
        <th><%= Task.human_attribute_name(:created_at) %></th>
        <th><%= Task.human_attribute_name(:status) %></th>
        <th><%= Task.human_attribute_name(:description) %></th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.name %></td>
          <td><%= l(task.created_at, format: :long) %></td>
          <td><%= t(".status.#{task.status}") %></td>
          <td><%= task.description %></td>
          <td><%= link_to t('buttons.show'), task, class: "btn btn-info" %></td>
          <!-- <td>
            <%= link_to task_path(task), class: 'btn btn-info' do %>
              <span class="glyphicon glyphicon-info-sign">
                <%= t('buttons.show') %>
              </span>
            <% end %>
          </td> -->
          <td><%= link_to t('buttons.edit'), edit_task_path(task), class: "btn btn-primary" %></td>
          <td><%= link_to t('buttons.destroy'), task, class: "btn btn-danger", method: :delete, data: { confirm: t('messages.confirm') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate @tasks %>

<br>

<%= link_to t('buttons.new'), new_task_path, class: "btn btn-primary pull-right" %>
