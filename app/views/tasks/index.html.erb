<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th><%= Task.human_attribute_name(:name) %></th>
      <th><%= Task.human_attribute_name(:status) %></th>
      <th><%= Task.human_attribute_name(:description) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= t(".status.#{task.status}") %></td>
        <td><%= task.description %></td>
        <td><%= link_to t('buttons.show'), task %></td>
        <td><%= link_to t('buttons.edit'), edit_task_path(task) %></td>
        <td><%= link_to t('buttons.destroy'), task, method: :delete, data: { confirm: t('messages.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

