<p id="notice"><%= notice %></p>

<h1><%= t('.title') %></h1>

<%= link_to t('buttons.new'), new_task_path, class: "btn btn-primary float-right" %>

<%= form_with url: tasks_path, local: true, html: { method: :get } do |f| %>
  <div class="form-row">
    <div class="form-group col-md-4">
      <%= f.label Task.human_attribute_name(:name) %>
      <%= f.text_field :name, value: params[:name], placeholder: t('.placeholder'), class: "form-control" %>
    </div>
    <div class="form-group col-md-3">
      <%= f.label Task.human_attribute_name(:status) %>
      <%= select_tag :status, options_for_select(Task.statuses.map { |k, v| [t(".status.#{k}"), k] }, selected: params[:status]), prompt: t('helpers.select.prompt'), class: "form-control" %>
    </div>
    <div class="form-group col-md-4">
      <%= f.label Label.human_attribute_name(:name) %>
      <%= f.collection_select(:label_ids, Label.all, :id, :name, { selected: params[:label_ids] }, { multiple: true, class: 'form-control select2-select' }) %>
    </div>
  </div>
  <div class="btn-group">
    <%= f.submit t('buttons.search'), class: "btn btn-default btn-primary" %>
  </div>
<% end %>

<br>

<%= paginate @tasks %>
<%= t('page') %>: <%= @tasks.current_page %>/<%= @tasks.total_pages %>
<%= t('total_count') %>: <%= @tasks.total_count %>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= Task.human_attribute_name(:name) %></th>
        <th><%= Label.human_attribute_name(:name) %></th>
        <th><%= Task.human_attribute_name(:created_at) %></th>
        <th><%= Task.human_attribute_name(:status) %></th>
        <th><%= Task.human_attribute_name(:description) %></th>
        <th><%= link_to "#{params[:sort] == "asc" ? "▼" : "▲"}", tasks_path(params: request.query_parameters.merge(sort: "#{params[:sort] == "asc" ? "desc" : "asc"}")) %><%= Task.human_attribute_name(:finished_on) %></th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.name %></td>
          <td>
            <% task.task_labels.each do |task_label| %>
              <span class="task_label"><%= task_label.label.name %></span>
            <% end %>
          </td>
          <td><%= l(task.created_at, format: :long) %></td>
          <td><%= t(".status.#{task.status}") %></td>
          <td><%= task.description %></td>
          <td><%= task.finished_on %></td>
          <td><%= link_to t('buttons.show'), task, class: "btn btn-info" %></td>
          <td><%= link_to t('buttons.edit'), edit_task_path(task), class: "btn btn-primary" %></td>
          <td><%= link_to t('buttons.destroy'), task, class: "btn btn-danger", method: :delete, data: { confirm: t('messages.confirm') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate @tasks %>
