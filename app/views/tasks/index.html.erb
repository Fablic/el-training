<h1>タスク一覧</h1>

<div style="margin-bottom: 10px">
  <%= search_form_for @q do |f| %>
    <%= f.label :title, Task.human_attribute_name(:title) %>
    <%= f.search_field :title_cont %>

    <%= f.label :aasm_state, Task.human_attribute_name(:aasm_state) %>
    <%= f.select :aasm_state_eq,
                 options_for_select(Task.aasm_states.map{ |k,v| [Task.aasm.states[v].display_name, v] }),
                 include_blank: true %>

    <%= f.submit t('label.button.filter') %>
  <% end %>
</div>

<table border>
  <thead>
    <tr>
      <th><%= sort_link(@q, :priority, Task.human_attribute_name(:priority)) %></th>
      <th><%= Task.human_attribute_name(:title) %></th>
      <th><%= Task.human_attribute_name(:description) %></th>
      <th colspan="2"><%= Task.human_attribute_name(:aasm_state) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks&.each do |task| %>
      <tr>
        <td><%= task.priority %></td>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.aasm.human_state %></td>
        <% if task.may_start? %>
          <td>
            <%= button_to t('label.link.start'),
                          task_starts_path(task),
                          data: { confirm: t('message.task.start.confirm') },
                          method: :get %>
          </td>
        <% elsif task.may_complete? %>
          <td>
            <%= button_to t('label.link.complete'),
                          task_completions_path(task),
                          data: { confirm: t('message.task.complete.confirm') },
                          method: :get %>
          </td>
        <% else %>
          <td></td>
        <% end %>
        <td><%= link_to t('label.link.show'), task %></td>
        <td><%= link_to t('label.link.edit'), edit_task_path(task) %></td>
        <td>
          <%= link_to t('label.link.delete'),
                      task,
                      method: :delete,
                      data: { confirm: t('message.delete.confirm') } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

