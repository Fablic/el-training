<div class="container">
    <div class="mt-3">
        <h1 class="text-center">タスク一覧画面</h1>
    </div>
    <div class="mt-5">
        <div>
            <table class="table table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">ステータス</th>
                        <th scope="col">タスク</th>
                        <th scope="col">終了期限</th>
                    </tr>
                </thead>
                <tbody>
                    <% @tasks.each do |tasks| %>
                    <tr>
                        <td><%= TASK_STATUS_LIST[tasks.status] %></td>
                        <td><%= tasks.title %></td>
                        <td><%= tasks.end_date.strftime("%Y/%m/%d") %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <div class="text-right">
            <a class="btn btn-secondary" href="tasks/newtask" role="button">タスク登録</a>
        </div>
    </div>
</div>