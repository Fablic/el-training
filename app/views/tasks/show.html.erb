<p id="notice"><%= notice %></p>

<p>
  <strong><%= Task.human_attribute_name(:name) %>:</strong>
  <%= @task.name %>
</p>

<p>
  <strong><%= Label.human_attribute_name(:name) %>:</strong>
  <% @task.task_labels.each do |label| %>
    <%= label.label.name %>
  <% end %>
</p>

<p>
  <strong><%= Task.human_attribute_name(:description) %>:</strong>
  <%= @task.description %>
</p>

<p>
  <strong><%= Task.human_attribute_name(:status) %>:</strong>
  <%= t(".status.#{@task.status}") %>
</p>

<p>
  <strong><%= Task.human_attribute_name(:finished_on) %>:</strong>
  <%= l(@task.finished_on, format: :long) %>
</p>

<%= link_to t('buttons.edit'), edit_task_path(@task), class: "btn btn-primary" %>
<%= link_to t('buttons.back'), root_path, class: "btn btn-secondary" %>
