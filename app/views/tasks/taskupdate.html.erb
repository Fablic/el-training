<div class="container">
  <div class="mt-3">
    <h1 class="text-center"><%= I18n.t('tasks.taskupdate.page_title') %></h1>
  </div>
  <div class="row mt-5">
    <div class="col-sm-8 mx-auto">
      <%= form_for(@task, url: tasks_taskupdate_process_path) do |f| %>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th scope="col">
              <%= f.label :status %>
            </th>
            <td>
              <%= f.select :status, Task.statuses.map {|k, v| [I18n.t("enums.task.status.#{k}"), v]}, :selected => @task.status_before_type_cast , class: "" %>
            </td>
          </tr>
          <tr>
            <th scope="col">
              <%= f.label :title %>
            </th>
            <td>
              <%= f.text_field :title, class: "col-sm-12" %>
            </td>
          </tr>
          <tr>
            <th scope="col">
              <%= f.label :detail %>
            </th>
            <td>
              <%= f.text_area :detail,rows: "10", class: "col-sm-12" %>
            </td>
          </tr>
          <tr>
            <th scope="col">
              <%= f.label :end_date %>
            </th>
            <td>
              <%= f.date_field :end_date, class: "col-sm-12" %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="row mt-5">
        <div class="col-sm-4 text-left">
          <%= link_to("#{I18n.t('tasks.taskupdate.cancel_button')}" ,tasks_taskdetail_path(@task.id), class: "btn btn-secondary") %>
        </div>
        <div class="col-sm-4 text-right">
          <%= f.hidden_field :hid, :value => @task.id %>
          <%= f.submit %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
