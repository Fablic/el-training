<div class="container">
    <div class="mt-3">
        <h1 class="text-center">タスク登録画面</h1>
    </div>
    <div class="row mt-5">
        <div class="col-sm-4 mx-auto">
            <%= form_for(@task, url: {controller: 'tasks', action: 'createtask'}) do |f| %>
            <div class="form-group">
                <%= f.label :title %>
                <%= f.text_field :title %>
            </div>
            <div class="text-right">
                <%= f.submit "送信" %>
            </div>
            <% end %>
        </div>
    </div>
</div>