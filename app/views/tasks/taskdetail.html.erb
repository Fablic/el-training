<div class="container">
    <div class="mt-3">
        <h1 class="text-center">タスク詳細</h1>
    </div>
    <div class="row mt-5">
        <div class="col-sm-8 mx-auto">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th scope="col">ステータス</th>
                        <td><%= TASK_STATUS_LIST[@taskInfos.status] %></td>
                    </tr>
                    <tr>
                        <th scope="col">タイトル</th>
                        <td><%= @taskInfos.title %></td>
                    </tr>
                    <tr>
                        <th scope="col">詳細</th>
                        <td><%= @taskInfos.detail %></td>
                    </tr>
                    <tr>
                        <th scope="col">終了期限</th>
                        <td><%= @taskInfos.end_date == nil ? "-" : @taskInfos.end_date.strftime("%Y/%m/%d") %></td>
                    </tr>
                </tbody>
            </table>
            <div class="row mt-5">
                <div class="col-sm-4 text-left">
                    <%= link_to( "戻る" , "/", class: "btn btn-secondary" ) %>
                </div>
                <div class="col-sm-4 text-right">
                    <%= link_to( "編集" , tasks_taskupdate_path(@taskInfos.id), class: "btn btn-secondary" ) %>
                </div>
                <div class="col-sm-4 text-right">
                    <%= link_to( "削除" , tasks_taskdelete_path(@taskInfos.id), class: "btn btn-secondary",method: :delete ) %>
                </div>
            </div>
        </div>
    </div>
</div>