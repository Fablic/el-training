<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, '件の') %>エラーが発生しました</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <form>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :detail %>
      <%= form.text_area :detail, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :status %>
      <%= form.select :status, options_for_select(Task.statuses.keys, params[:status]), class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :user_id %>
      <%= form.select :user_id, options_for_select(User.ids, params[:user_id]), class: "form-control" %>
    </div>

    <button type="submit">登録</button>
  </form>
<% end %>
