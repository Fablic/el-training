<%= form_with(model: task) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('message.task.form.not_saved', errors_count: task.errors.count) %></h2>

      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :priority %>
    <%= form.number_field :priority, step: 1, min: 1 %>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, maxlength: 30, size: 60 %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="label-checkbox">
    <%= form.label :label %>
    <% current_user.labels.each do |label| %>
      <%= form.check_box :label_ids,
                         { multiple: true,
                           checked: @task_label_ids&.include?(label.id),
                           include_hidden: false },
                         label[:id] %>
      <%= label.name %>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
