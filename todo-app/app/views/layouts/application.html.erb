<!DOCTYPE html>
<html>
<head>
  <title>TodoApp</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <%=  link_to "Task List", root_path , class: "navbar-brand" %>
  <% if current_user&.admin? %>
    <ul class="navbar-nav">
      <li class="nav-item">
        <%=  link_to "管理者機能", "/admin" , class: "nav-link" %>
      </li>
    </ul>
  <% end %>
  <% if current_user %>
    <div class="collapse navbar-collapse justify-content-end">
      <span class="navbar-text">
        <%= "こんにちは、" + current_user.name + " さん"%>
      </span>
      <ul class="navbar-nav">
        <li class="nav-item active">
          <%= link_to "ログアウト", logout_path , method: :delete, class: "nav-link" %>
        </li>
      </ul>
    </div>
  <% end %>
</nav>


  <div class="row message-area">
    <% if flash.notice %>
      <div class="col-md-12">
        <div class="alert alert-success" role="alert"><%= flash.notice %></div>
      </div>
    <% end %>
    <% if flash.alert %>
      <div class="col-md-12">
        <div class="alert alert-danger" role="alert"><%= flash.alert %></div>
      </div>
    <% end %>
  </div>
  　
  <%= yield %>

</body>

</html>
