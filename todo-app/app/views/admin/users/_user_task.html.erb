<div class="modal fade" id="task_list-<%= user.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <table class="table table-striped table-hover">
          <thead>
          <tr class="text-left">
            <th>タスク名</th>
            <th>期限</th>
          </tr>
          </thead>
          <tbody>
          <% user.tasks.each do |task| %>
            <tr>
              <td class="text-left"><%= task.name %></td>
              <td class="text-right"><%= task.due_date&.strftime("%Y/%m/%d") %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>