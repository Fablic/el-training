<%= @title = "タスクの新規作成" %>

<h1><% @title %></h1>

<div class="container">

  <div class="row">
    <div class="col-md-6">
      <%= form_with model: @task, local: true do |f| %>
        <%= render "form", f:f %>

        <div class="form-group">
          <%= f.label :input_task_label, "タスクラベル（カンマ区切り）" %>
          <%= f.text_field :input_task_label, class: "form-control"  %>
        </div>

        <div class="btn-area">
          <%= f.submit "作成する", class: "btn btn-success" %>
          <%= link_to "一覧へ戻る", tasks_path , class: "btn btn-secondary"%>
        </div>
      <% end %>
    </div>
  </div>

</div>
