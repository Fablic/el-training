<h1>タスク一覧</h1>
<%= link_to '新規登録', new_task_path %>

<table class="task-list" border="1" cellpadding="3">
  <tr>
    <th>タスク名</th>
    <th>説明</th>
    <th>アクション</th>
  </tr>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.name %></td>
      <td><%= simple_format(task.description) %></td>
      <td>
        <%= link_to '編集', edit_task_path(task) %>
        <%= link_to '削除', task_path(task), method: :delete, data: { confirm: "タスク「#{task.name}」を削除します。よろしいですか?" } %>
      </td>
    </tr>
  <% end %>
</table>
