<% if task.errors.any? %>
  <ul id="error_explanation" class="alert alert-danger">
    <% task.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: task, local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :due_date %>
    <%= form.text_field :due_date, class: 'date-picker' %>
  </div>

  <div>
    <%= form.label :priority %>
    <%= form.select :priority, Task.priorities.map { |key, value| [I18n.t("enums.task.priority.#{key}"), key] } %>
  </div>

  <div>
    <%= form.submit '送信' %>
  </div>
<% end %>
