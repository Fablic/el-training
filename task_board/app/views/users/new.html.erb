<div class='container'>
  <h1><%= I18n.t('signup.title') %></h1>
  <% @user.errors.full_messages.each do |msg| %>
    <div class='alert alert-danger'><%= msg %></div>
  <% end %>
  <%= form_with model: @user, local: true do |form| %>
    <div class='form-group'>
      <%= form.label :name %>
      <%= form.text_field :name, :required => true, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= form.label :email %>
      <%= form.email_field :email, :required => true, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= form.label :password %>
      <%= form.password_field :password, :required => true, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= form.label :password_confirmation, I18n.t('signup.password_confirmation') %>
      <%= form.password_field :password_confirmation, :required => true, class: 'form-control' %>
    </div>
    <%= form.submit I18n.t('signup.title'), class: 'btn btn-primary' %>
  <% end %>
</div>
