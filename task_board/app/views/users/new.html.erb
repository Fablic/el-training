<div class='container'>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header"><%= I18n.t('signup.title') %></div>
        <div class="card-body">
          <% @user.errors.full_messages.each do |msg| %>
            <div class='alert alert-danger'><%= msg %></div>
          <% end %>
          <%= form_with model: @user, local: true do |form| %>
            <div class='form-group'>
              <%= form.label :name %>
              <%= form.text_field :name, required: true, class: 'form-control' %>
            </div>
            <div class='form-group'>
              <%= form.label :email %>
              <%= form.email_field :email, required: true, class: 'form-control' %>
            </div>
            <div class='form-group'>
              <%= form.label :password %>
              <%= form.password_field :password, required: true, class: 'form-control' %>
            </div>
            <div class='form-group'>
              <%= form.label :password_confirmation, I18n.t('signup.password_confirmation') %>
              <%= form.password_field :password_confirmation, required: true, class: 'form-control' %>
            </div>
            <%= form.submit I18n.t('signup.title'), class: 'btn btn-primary' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
