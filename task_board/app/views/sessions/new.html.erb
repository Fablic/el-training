<div class='container'>
  <h1><%= I18n.t('login.title') %></h1>
  <%= form_with scope: :session, url: login_path, local: true do |form| %>
    <div class='form-group'>
      <%= form.label :email %>
      <%= form.email_field :email, :required => true, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= form.label :password %>
      <%= form.password_field :password, :required => true, class: 'form-control' %>
    </div>
    <%= form.submit I18n.t('login.title'), class: 'btn btn-primary' %>
  <% end %>
</div>
