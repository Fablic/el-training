<% @task.errors.full_messages.each do |msg| %>
  <div class='alert alert-danger'><%= msg %></div>
<% end %>

<%= form_with model: @task, local: true do |form| %>
  <div class='form-group'>
    <%= form.label(:name) %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= form.label(:description) %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= form.label(:end_date) %>
    <%= form.date_select :end_date, class: 'form-control' %>
  </div>
  <div class='form-row'>
    <div class='form-group col-md-6'>
      <%= form.label(:priority) %>
      <%= form.select :priority, Task.priorities.keys, {}, class: 'custom-select' %>
    </div>
    <div class='form-group col-md-6'>
      <%= form.label(:status) %>
      <%= form.select :status, Task.statuses.keys, {}, class: 'custom-select' %>
    </div>
  </div>
  <%= form.submit "#{type}", class: 'btn btn-primary' %>
<% end %>
