<div class='container'>
  <h1><%= I18n.t('tasks.title.show') %></h1>
  <%= link_to I18n.t('tasks.link.index'), tasks_path, class: 'btn btn-info' %>

  <table class='table table-hover'>
    <tbody>
      <tr>
        <th><%= Task.human_attribute_name(:name) %></th>
        <td><%= h(@task.name) %></td>
      </tr>
      <tr>
        <th><%= Task.human_attribute_name(:description) %></th>
        <td><%= simple_format(h(@task.description)) %></td>
      </tr>
      <tr>
        <th><%= Task.human_attribute_name(:end_date) %></th>
        <td><%= @task.end_date %></td>
      </tr>
      <tr>
        <th><%= Task.human_attribute_name(:priority) %></th>
        <td><%= @task.priority %></td>
      </tr>
      <tr>
        <th><%= Task.human_attribute_name(:status) %></th>
        <td><%= @task.status %></td>
      </tr>
    </tbody>
  </table>
  <div style='display: flex' class='justify-content-md-center'>
    <%= link_to I18n.t('tasks.link.edit'), edit_task_path(@task), class: 'btn btn-primary' %>
    <%= button_to I18n.t('tasks.link.delete'), task_path(@task), method: :delete, data: { confirm: I18n.t('tasks.delete_confirm', name: @task.name) }, class: 'btn btn-danger' %>
  </div>
</div>
