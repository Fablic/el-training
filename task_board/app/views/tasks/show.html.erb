<div class='container'>
  <h1>タスク詳細</h1>
  <%= link_to '一覧へ', tasks_path, class: 'btn btn-primary'%>

  <table class='table table-hover'>
    <tbody>
      <tr>
        <th>タスク名</th>
        <td><%= @task.name %></td>
      </tr>
      <tr>
        <th>最終期限</th>
        <td><%= @task.end_date %></td>
      </tr>
      <tr>
        <th>優先順位</th>
        <td><%= @task.priority %></td>
      </tr>
      <tr>
        <th>ステータス</th>
        <td><%= @task.status %></td>
      </tr>
    </tbody>
  </table>
</div>
