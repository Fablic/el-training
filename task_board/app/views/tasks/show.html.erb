<div class='container'>
  <h1>タスク詳細</h1>
  <%= link_to '一覧へ', tasks_path, class: 'btn btn-info'%>

  <table class='table table-hover'>
    <tbody>
      <tr>
        <th>タスク名</th>
        <td><%= h(@task.name) %></td>
      </tr>
      <tr>
        <th>説明</th>
        <td><%= simple_format(h(@task.description)) %></td>
      </tr>
      <tr>
        <th>最終期限</th>
        <td><%= @task.end_date %></td>
      </tr>
      <tr>
        <th>優先順位</th>
        <td><%= @task.priority %></td>
      </tr>
      <tr>
        <th>ステータス</th>
        <td><%= @task.status %></td>
      </tr>
    </tbody>
  </table>
  <div style='display: flex' class='justify-content-md-center'>
    <%= link_to '編集', edit_task_path(@task), class: 'btn btn-primary' %>
    <%= button_to '削除', task_path(@task), method: :delete, data: { confirm: "タスク：「#{@task.name}」、本当に削除しますか？" }, class: 'btn btn-danger' %>
  </div>
</div>
