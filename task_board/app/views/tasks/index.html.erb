<h1>タスク一覧</h1>
<%= link_to '新規作成', new_task_path, class: 'btn btn-primary'%>

<table class="table">
  <thead>
    <tr>
      <th scope="col">タスク名</th>
      <th scope="col">最終期限</th>
      <th scope="col">ステータス</th>
      <th scope="col">優先順位</th>
      <th scope="col"> </th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.end_date %></td>
        <td><%= task.status %></td>
        <td><%= task.priority %></td>
        <td> </td>
      </tr>
    <% end %>
  </tbody>
</table>
