<!DOCTYPE html>
<html>
  <head>
    <title>TaskBoard</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <a class="navbar-brand" href="/">Task Board</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse w-100 order-3 dual-collapse2" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto">
            <% if logged_in? %>
              <li class="nav-item">
                <span class="navbar-text mr-sm-2">User Name: <%= current_user.name %></span>
              </li>
              <li class="nav-item">
                <%= link_to 'Log Out', logout_path, method: :delete, class: 'btn btn-outline-secondary' %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to I18n.t('login.title'), login_path, class: 'btn btn-outline-secondary mr-sm-2' %>
              </li>
              <li class="nav-item">
                <%= link_to I18n.t('signup.title'), new_user_path, class: 'btn btn-outline-secondary' %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <% if flash.notice.present? %>
      <div class='alert alert-primary'><%= flash.notice %></div>
    <% end %>
    <%= yield %>
  </body>
</html>
