<!DOCTYPE html>
<html>
  <head>
    <title>Tasclear</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <meta name="viewport" content="width=device-width">
  </head>

  <body>
    <div class="container">

      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <%= link_to t('.title'), root_path, class:'navbar-brand' %>
        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="ナビゲーションの切替">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to t('.new_task'), new_task_path, class:'nav-link' if logged_in? %>
            </li>
            <li class="nav-item">
              <%= link_to t('.users'), admin_users_path, class:'nav-link' if current_user&.admin? %>
            </li>
            <li class="nav-item">
              <% if logged_in? %>
                <%= link_to t('.logout'), session_path(current_user.id),method: :delete, class:'nav-link' %>
              <% else %>
                <%= link_to t('.new_user'), new_user_path, class:'nav-link' %>
                </li>
                <li class="nav-item">
                <%= link_to t('.login'), new_session_path, class:'nav-link' %>
              <% end %>
            </li>
          </ul>
        </div>
      </nav>

      <% if notice %>
        <p class="alert alert-success alert-dismissible">
        <%= notice %>
        </p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger alert-dismissible">
        <%= alert %>
        </p>
      <% end %>

      <%= yield %>

    </div>
  </body>
</html>
