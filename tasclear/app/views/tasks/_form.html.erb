<%= form_with(model: @task, local: true) do |form| %>
  <% if @task.errors.any? %>
    <div>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, class:"form-control", rows:"3" %>
  </div>
  <div class="form-group">
    <%= form.label :status %>
    <%= form.select :status, Task.statuses_i18n.invert, {}, {class:"form-control"} %>
  </div>
  <div class="form-group">
    <%= form.label :priority %>
    <%= form.select :priority, Task.priorities_i18n.invert, {}, {class:"form-control"} %>
  </div>
  <div class="form-group">
    <%= form.label :deadline %>
    <%= form.date_field :deadline, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :label_name %>
    <%= form.text_field :label_name, class:"form-control" %>
    <small class="text-muted">カンマ（,）区切りで入力ください。</small>
  </div>
  <%= form.submit class:"btn btn-primary" %>
<% end %>
