<h1><%= link_to t('.title'), root_path %></h1>
<div>
<%= form_tag(root_path, method: 'get') do %>
  <%= label_tag :search_name, t('.search_name') %><%= text_field_tag :search_name, params[:search_name] %>
  <%= label_tag :search_status, t('.search_status') %><%= select_tag :search_status, options_for_select( Task.statuses_i18n.invert ), include_blank: true %>
  <%= submit_tag t('.search_submit') %>
<% end %>
        <tr class="table-<%= border_color task.deadline if task.deadline.present? %>">
          <td><span class="badge badge-<%= status_color task.status %>"><%= task.status_i18n %></span></td>
          <td><span class="badge badge-<%= priority_color task.priority %>"><%= task.priority_i18n %></span></td>
          <td><%= link_to edit_task_path(task.id) do %>
            <i class="fa fa-edit"></i>
          <% end %></td>
          <td><%= link_to task_path(task.id), method: :delete, data: {confirm: t('.confirm')} do %>
            <i class="fa fa-trash"></i>
          <% end %></td>
</div>
<table>
  <tr>
    <th><%= t('.status') %></th>
    <th><%= link_sort(t('.priority'), 'priority') %></th>
    <th><%= link_sort(t('.deadline'), 'deadline') %></th>
    <th><%= t('.name') %></th>
    <th><%= t('.content') %></th>
  </tr>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.deadline %></td>
      <td class='name'><%= task.name %></td>
      <td><%= task.content %></td>
      <td><%= link_to t('.detail'), task_path(task.id) %></td>
    </tr>
  <% end %>
</table>
<%= paginate @tasks %>
<%= link_to t('.new_task'), new_task_path %>
