<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-6">
      <div class="card text-center mt-3">
        <div class="card-header">
          <h1><%= t('.login') %></h1>
        </div>
        <div class="card-body">
          <% flash.each do |name, msg| %>
            <%= content_tag :div, msg.join('<br>').html_safe, class: "alert-#{name}" %>
          <% end %>
          <%= form_tag sessions_path do |form| %>
            <div class="form-group">
              <%= label_tag 'login_id', t('.login_id') %>
              <%= text_field_tag :login_id, nil, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= label_tag 'password', t('.password') %>
              <%= text_field_tag :password, nil, class: 'form-control' %>
            </div>
            <%= button_tag t('.login'), class: 'btn btn-primary' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>