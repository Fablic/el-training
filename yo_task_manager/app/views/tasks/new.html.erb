<div class="container-fluid">
  <div class="row">
    <div class="col-sm">
      <h1><%= t('.adding_task') %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, class: 'alert-' + name %>
      <% end %>
      <% @task.errors.full_messages.each do |err_msg| %>
        <%= content_tag :div, err_msg, class: 'alert-danger' %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm">
      <%= render partial: "form", locals: { task: @task, button_name: t('.add') } %>
    </div>
  </div>
</div>
