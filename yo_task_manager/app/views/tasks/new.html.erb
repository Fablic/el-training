<div class="container-fluid">
  <div class="row">
    <div class="col-sm">
      <h1>タスク追加</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, class: 'alert-' + name %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm">
      <%= render partial: "form", locals: { task: @task, button_name: '追加' } %>
    </div>
  </div>
</div>
