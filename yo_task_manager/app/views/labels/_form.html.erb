<%= form_for label do |f| %>
  <table class="table table-dark">
    <tbody>
    <tr>
      <th scope="col">
        <%= f.label t('labels.label_name') %>
      </th>
      <td>
        <%= f.text_field :name %>
      </td>
    </tr>
    <tr>
      <td colspan="2">
        <div class="d-flex justify-content-around">
          <%= f.submit button_name, class: 'btn btn-primary' %>
          <%= link_to t('button.cancel'), labels_path, class: 'btn btn-light' %>
        </div>
      </td>
    </tr>
    </tbody>
  </table>
<% end %>
