<%= form_with(model: task, url: [@tasks_user, task], local: true, class: 'form-horizontal center') do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        <div class='alert-heading'>
          <h2><%= t('errors.template.header', model: task.model_name.human, count: task.errors.count) %></h2>
        </div>

        <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class='row'>
    <div class='col-md-6 col-md-offset-3'>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :tags %>
        <%= text_field_tag 'task[tag_list]', task.tag_list.join(','), class: 'form-control', placeholder: t('.tags.placeholder') %>
      </div>

      <div class="form-group">
        <%= form.label :status %>
        <%= form.select :status, Task.status.options %>
      </div>

      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :due_date %>
        <%= form.date_field :due_date, value: Time.current.strftime("%Y-%m-%d") %>
      </div>

      <%= form.submit "Submit", class: "btn btn-default btn-primary" %>
    </div>
  </div>
<% end %>
