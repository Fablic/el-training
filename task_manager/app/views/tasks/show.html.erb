<p id="notice"><%= notice %></p>

<p>
  <strong><%= t('activerecord.attributes.task.name') + ':' %></strong>
  <%= @task.name %>
</p>

<p>
  <strong><%= t('activerecord.attributes.task.description') + ':' %></strong>
  <%= @task.description %>
</p>

<p>
  <strong><%= t('activerecord.attributes.task.due_date') + ':' %></strong>
  <%= @task.due_date %>
</p>

<div class="btn-group" %>
  <%= link_to 'Edit', edit_task_path(@task), class: 'btn btn-info' %>
</div>
<div class="btn-group" %>
  <%= link_to 'Back', tasks_path, class: 'btn btn-secondary' %>
</div>
