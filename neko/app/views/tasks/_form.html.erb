<%= form_for(task) do |f| %>
  <div class="form">
    <div class="form-group">
      <%= f.label :name, class: 'col-form-label' %>
      <div><%= f.text_field :name, class:'form-control' %></div>
    </div>
    <div class="form-group">
      <%= f.label :description, class: 'col-form-label' %>
      <div><%= f.text_area :description, class:'form-control scroll' %></div>
    </div>
    <div class="row">
      <div class="form-group col-4">
        <%= f.label :status, class: 'col-form-label' %>
        <%= f.select :status, Task.statuses_i18n.invert, class:'form-control' %>
      </div>
      <div class="form-group col-8 hidden-box">
        <%= f.label :due_at, class: 'due_label'  %>
        <%= f.check_box :have_a_due %>
        <div class="hidden">
          <%= f.datetime_local_field :due_at, class:'form-control duetime' %>
        </div>
      </div>
    </div>
    <div class="form-group text-center">
      <%= f.submit class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
<%= link_to I18n.t('back'), tasks_path, class: 'back btn btn-secondary' %>
