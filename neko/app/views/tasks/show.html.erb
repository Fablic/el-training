<div class="detail">
  <h2><%= @task.name %></h2>
  <p>説明：</p>
  <p><%= @task.description %></p>
  <p><%= "#{Task.human_attribute_name(:status)}：#{@task.status_i18n}" %></p>
  <p>
    <%= "#{Task.human_attribute_name(:label_ids)}：" %>
    <% @task.labels.each do |label| %>
      <%= label.name %>
      <%= ', ' unless label == @task.labels.last %>
    <% end %>
  </p>

  <p><%= "#{Task.human_attribute_name(:user)}：#{@task.user.name}" %></p>
  <p><%= Task.human_attribute_name(:due_at) %>
    <% if @task.have_a_due %>
      <%= I18n.l(@task.due_at) %>
    <% else %>
      なし
    <% end %>
  </p>
  <p><%= "#{Task.human_attribute_name(:created_at)}：#{I18n.l(@task.created_at)}" %></p>
  <div class="btn-wrap">
    <%= link_to I18n.t('back'), tasks_path, class: 'btn btn-outline-secondary' %>
    <%= link_to I18n.t('edit'), edit_task_path(@task), class: 'btn btn-outline-secondary' %>
    <%= link_to I18n.t('delete'), task_path(@task), method: :delete, data: { confirm: I18n.t('dialog.delete', target: Task.model_name.human) }, class: 'btn btn-outline-danger' %>
  </div>
</div>
