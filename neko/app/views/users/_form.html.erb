<%= form_for(user) do |f| %>
  <div class="form">
    <div class="form-group row">
      <%= f.label :name, class: 'col-2 col-form-label' %>
      <div class="col-11"><%= f.text_field :name, class:'form-control' %></div>
    </div>
    <%= f.fields_for :auth_info do |a| %>
      <div class="form-group row">
        <%= a.label :email, class: 'col-3 col-form-label' %>
        <div class="col-11"><%= a.email_field :email, class: "form-control", placeholder:"Enter email" %></div>
      </div>
      <div class="form-group row">
        <%= a.label :password, class: 'col-2 col-form-label' %>
        <div class="col-11"><%= a.password_field :password, class: "form-control", placeholder:"Password" %></div>
      </div>
      <div class="form-group row">
        <%= a.label :password_confirmation, class: 'col-5 col-form-label' %>
        <div class="col-11"><%= a.password_field :password_confirmation, class: "form-control", placeholder:"Password(confirm)" %></div>
      </div>
      <div class="form-group text-center">
        <%= f.submit class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
<% end %>
<%= link_to I18n.t('back'), users_path, class: 'back btn btn-secondary' %>