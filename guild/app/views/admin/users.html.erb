<!-- Fixed navbar -->
<%= render :partial => "common/header/admin" %>
<body>
  <div class="container" id="admin-users-content">
    <div id="alert-complete" class="alert alert-success" role="alert" hidden></div>
    <div id="alert-error" class="alert alert-danger" role="alert" hidden></div>
    <form class="form-inline">
    <div class="form-group">
     <div class="form-group" style="padding:10px;">
        <button type="button" class="btn btn-success" id='create-button' data-toggle="modal" onClick="javascript:openAddingeModalWindow();">Create</button>
      </div>
    </div>
  </form>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">UserName</th>
          <th scope="col">Email</th>
          <th scope="col">Type</th>
          <th scope="col">Createion Date Time</th>
          <th scope="col">Updated Date Time</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody id="user-list-doby">
        <% @users.each do | user |%>
        <tr>
          <th scope="row"><%= user.id %></th>
          <td><%= user.name %></td>
          <td><%= user.login.email %></td>
          <td><% if user.authority == 1 %>Administrator<% else %>Member<% end %></td>
          <td><%= user.created_at %></td>
          <td><%= user.updated_at %></td>
          <td><button type="button" id="button-delete-<%= user.id %>" class="btn btn-danger" onClick="javascript:openDeleteModalWindow(<%= user.id %>);">Delete</button></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<%= render :partial => "common/modal_window" %>
<%= javascript_include_tag 'admin' %>
</body>
