<%= form_with(model: [:admin, user], local: true) do |form| %>
  <div class="form-row align-items-center mb-2">
    <div class="col-auto">
      <%= form.label User.human_attribute_name(:task_name) %>
      <%= form.text_field :account_name, class: 'form-control' %>
    </div>
    <div class="col-auto">
      <%= form.label User.human_attribute_name(:password) %>
      <%= form.password_field :password, class: 'form-control' %>
    </div>
  </div>
  <div class="row mb-2">
    <div class="col-auto">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
    <div class="col-auto">
      <%= link_to I18n.t('back'), admin_users_path, class: 'btn btn-secondary' %>
    </div>
  </div>
<% end %>
