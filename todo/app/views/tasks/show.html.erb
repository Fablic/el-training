<h1><%= @task.title %></h1>

<dl>
  <dt>説明</dt>
  <dd><%= @task.description %></dd>
  <dt>ステータス</dt>
  <dd><%= status_text[@task.status] %></dd>
</dl>

<%= link_to t('link.back'), tasks_path %>
<%= link_to t('link.edit'), tasks_edit_path(@task) %>
<%= link_to t('link.delete'), tasks_destroy_path(@task), method: :delete %>
