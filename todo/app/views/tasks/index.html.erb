<h1>タスク一覧<h1>
<div class = "top_bar">
  <div class = "search_bar">
    <form>
      <p>タスク検索：
      <input type="text" name="task_name"></p>
    </form>
  </div>
  <div class = "search_bar">
    <p><%= link_to 'タスク登録', new_task_path(project_id: @pjid) %></p>
  </div>
</div>

<div class = "task_table">
  <table>
    <tr>
      <th>タスク</th>
      <th>優先順位</th>
      <th>期限日</th>
      <th colspan = 3></th>
    </tr>
    
    <% @tasks.each do |task| %>
    <tr>
        <td><%= link_to task.task_name, task %></td>
        <% case task.priority
          when 0 %>
          <td>小</td>
          <% when 1 %>
          <td>中</td>
          <% when 2 %>
          <td>高</td>
          <% end %>
        <td><%= task.finished_at%></td>
        <td><%= link_to '修正', edit_task_path(task,project_id: @pjid) %></td>
        <td><%= link_to '削除', task, method: :delete, data: { confirm: '削除してもよろしいでしょうか?' } %></td>
    </tr>
    <% end %>
  </table>
</div>

