<%= form_for(@task, url: form_path) do |f| %>

  <div class="form-group row">
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group row">
  <%= f.label :description %>
  <%= f.text_area :description, size: "60x12", class: 'form-control' %>
  </div>

  <div class="form-group row">
  <%= f.label :status %>
  <%= f.select :status, status_text.invert, {}, class: 'form-control' %>
  </div>

  <div class="form-group row">
  <%= f.label :due_date %>
  <%= f.datetime_field :due_date, class: 'form-control' %>
  </div>

  <div class="form-group row">
  <%= f.submit button_name, class: 'btn btn-primary' %>
  </div>
<% end %>
