<%= form_with(model: project, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :'PJ名' %>
    <%= form.text_field :project_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :'説明' %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>
  <div class="form-row align-items-center mb-3">
    <div class="col-auto">
      <%= form.label :'状態' %>
      <%= form.select :status,
      [ ["To Do", :todo], ["In Progress", :in_progress], ["In Review", :in_review] ,["Waiting Approval / Release", :release], ["Resolved / Done", :done] ],
      class: 'form-control' %>
    </div>

    <div class ="col-auto">
      <%= form.label :'開始日付' %>
      <%= form.date_field :started_at %>
    </div>

    <div class ="col-auto">
      <%= form.label :'終了日付' %>
      <%= form.date_field :finished_at %>
    </div>
  </div>

  <div class="form-row align-items-center mb-2">
    <div class ="col-auto">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
    <div class ="col-auto">
      <%= link_to I18n.t('projects.back'), projects_path, class: 'btn btn-secondary' %>
    </div>
  </div>
<% end %>
