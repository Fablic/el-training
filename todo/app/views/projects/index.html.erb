<div class="container">
  <div class="row mb-2">
    <div class="col">
      <h1><%= I18n.t('projects.index.title') %></h1>
    </div>
    <div class = "col">
      <%= link_to I18n.t('projects.index.new'), new_project_path, class: 'btn btn-success' %>
    </div>
  </div>
</div>
<div class="row mb-4">
  <% @status_list.each do |status| %>
    <div class="col">
      <p class="text-center"><%= Project.human_attribute_name(status.to_sym) %></p>
      <ul class="list-group">
        <% @projects.where(status: status.to_sym).each do |project| %>
          <% if @user_have_pj.include?(project.id) %>
            <li class="list-group-item"><%= render partial: "project_info", locals: {project: project} %></li>
          <% else %>
            <li class="list-group-item"><%= render partial: "project_info_not_allowed", locals: {project: project} %></li>
          <% end %>
      </ul>
      <% end %>
    </div>
  <% end %>
</div>
