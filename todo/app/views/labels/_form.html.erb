<%= form_with(model: label, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :'色' %>
    <%= form.color_field :color %>
  </div>

  <div class="form-group">
    <%= form.label :'ラベル内容' %>
    <%= form.text_area :text, class: 'form-control' %>
  </div>

  <div class="row mb-2">
    <div class="col-auto">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
    <div class="col-auto">
      <%= link_to I18n.t('labels.back'), labels_path, class: 'btn btn-secondary' %>
    </div>
  </div>
<% end %>
