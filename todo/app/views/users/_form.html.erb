<%= form_with(model: user, local: true) do |form| %>
  <div class="form-row align-items-center mb-2">
    <div class="col-auto">
      <%= form.label User.human_attribute_name(:account_name) %>
      <%= form.text_field :account_name, class: 'form-control' %>
    </div>
    <div class="col-auto">
      <%= form.label User.human_attribute_name(:password) %>
      <%= form.password_field :password, class: 'form-control' %>
    </div>
  </div>
  <div class="row mb-2">
    <div class="col-auto">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
    <div class="col-auto">
      <% if logged_in? %>
        <%= link_to I18n.t('back'), projects_path, class: 'btn btn-secondary' %>
      <% else %>
        <%= link_to I18n.t('back'), login_path, class: 'btn btn-secondary' %>
      <% end %>
    </div>
  </div>
<% end %>
