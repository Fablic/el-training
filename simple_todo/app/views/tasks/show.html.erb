<p id="notice"><%= notice %></p>

<table class="table table-striped">
  <tr>
    <td>
      <strong><%= t('activerecord.attributes.task.label') %>:</strong>
    </td>
    <td>
      <% @task.labels.each do |label| %>
        <%= label.name %>
      <% end %>
    </td>
  </tr>
  <tr>
    <td>
      <strong><%= t('activerecord.attributes.task.title') %>:</strong>
    </td>
    <td>    
      <%= @task.title %>
    </td>
  </tr>
  <tr>
    <td>
      <strong><%= t('activerecord.attributes.task.description') %>:</strong>
    </td>
    <td>
      <%= @task.description %>
    </td>
  </tr>
  <tr>
    <td>
      <strong><%= t('activerecord.attributes.task.user') %>:</strong>
    </td>
    <td>
      <%= @task.user_id %>
    </td>
  </tr>
  <tr>
    <td>
      <strong><%= t('activerecord.attributes.task.limit') %>:</strong>
    </td>
    <td>
      <%= @task.limit %>
    </td>
  </tr>
  <tr>
    <td>
      <strong><%= t('activerecord.attributes.task.priority') %>:</strong>
    </td>
    <td>
      <%= @task.priority %>
    </td>
  </tr>
  <tr>
    <td>
      <strong><%= t('activerecord.attributes.task.status') %>:</strong>
    </td>
    <td>
      <%= @task.status_i18n %>
    </td>
  </tr>
</table>
<%= link_to t('contents.edit') , edit_task_path(@task), class: "btn btn-success" %>
<%= link_to t('contents.index') , tasks_path, class: "btn btn-primary" %>
