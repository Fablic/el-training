<p id="notice"><%= notice %></p>

<h1><%= t('contents.index')%></h1>

<table>
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.task.title') %></th>
      <th><%= t('activerecord.attributes.task.description') %></th>
      <th><%= t('activerecord.attributes.task.user') %></th>
      <th><%= t('activerecord.attributes.task.limit') %></th>
      <th><%= t('activerecord.attributes.task.priority') %></th>
      <th><%= t('activerecord.attributes.task.status') %></th>
      <th><%= t('activerecord.attributes.task.created_at') %></th>
      <th><%= t('activerecord.attributes.task.updated_at') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td class='title' ><%= task.title %></td>
        <td class='description' ><%= task.description %></td>
        <td class='user_id' ><%= task.user_id %></td>
        <td class='limit' ><%= task.limit %></td>
        <td class='priority' ><%= task.priority %></td>
        <td class='status' ><%= task.status %></td>
        <td class='created_at' ><%= task.created_at %></td>
        <td class='updated_at' ><%= task.updated_at %></td>
        <td><%= link_to t('contents.show') , task %></td>
        <td><%= link_to t('contents.edit') , edit_task_path(task.id) %></td>
        <td><%= link_to t('contents.destroy') , task, method: :delete, data: { confirm: t('messages.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('contents.new'), new_task_path %>
